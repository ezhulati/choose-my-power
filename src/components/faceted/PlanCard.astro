    @apply text-center mb-4;
  }

  .main-rate {
    @apply flex items-baseline justify-center gap-1;
  }

  .rate-value {
    @apply text-3xl font-bold;
  }
  
  .best-value-badge {
    @apply mt-2;
  }

  .savings-badge {
    @apply mt-2;
  }

  .rate-unit {
    @apply text-sm text-gray-600;
  }

  .rate-type {
