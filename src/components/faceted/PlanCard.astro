  }

  .trust-signals {
    @apply flex flex-wrap gap-2;
  }

  .trust-badge {
    @apply bg-blue-100 text-blue-800 text-xs font-medium px-3 py-1 rounded-full border border-blue-200;
  }

  .pricing-section {
    @apply border-t border-gray-100 pt-4 mb-4;
  }

