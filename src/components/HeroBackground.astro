---
export interface Props {
  imageUrl?: string;  // Keep for SEO/OG meta tags only
  fallbackClass?: string;
  gradientClass?: string;
  heroType?: 'homepage' | 'city' | 'compare' | 'shop' | 'general';
}

const { 
  gradientClass,
  heroType = 'general'
} = Astro.props;

// Brand color gradients for different page types
const brandGradients = {
  homepage: "bg-gradient-to-br from-blue-600 via-blue-700 to-blue-800",
  city: "bg-gradient-to-br from-blue-700 via-blue-800 to-indigo-800", 
  compare: "bg-gradient-to-br from-indigo-600 via-blue-700 to-blue-800",
  shop: "bg-gradient-to-br from-green-600 via-blue-600 to-blue-700",
  general: "bg-gradient-to-br from-blue-600 via-blue-700 to-blue-800"
};

const finalGradient = gradientClass || brandGradients[heroType];

// Use solid brand colors instead of images for better performance
console.log('ðŸŽ¨ HeroBackground: Using solid brand colors for better performance');
---

<div 
  class={`relative min-h-full ${finalGradient}`}
>
  <!-- Content -->
  <div class="relative flex items-center justify-center min-h-full hero-content">
    <slot />
  </div>
</div>

<style>
  /* Ensure proper layering and performance */
  .bg-cover {
    background-size: cover !important;
    background-position: center !important;
    background-repeat: no-repeat !important;
  }
  
  /* Hero content z-index using design system value */
  .hero-content {
    z-index: 2; /* Z_INDEX.CONTENT - stays below navigation dropdowns */
  }
  
  /* Hardware acceleration */
  .transform {
    transform: translate3d(0, 0, 0);
  }
  
  /* Smooth transitions */
  @media (prefers-reduced-motion: no-preference) {
    .scale-105 {
      transition: transform 0.3s ease-out;
    }
  }
</style>