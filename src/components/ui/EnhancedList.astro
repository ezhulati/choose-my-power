---
/**
 * Enhanced List Component
 * Provides consistent list styling with Texas design system bullet points
 */

export interface Props {
  items: string[];
  bulletColor?: 'navy' | 'red' | 'gold' | 'green';
  spacing?: 'sm' | 'md' | 'lg';
  textSize?: 'base' | 'lg' | 'xl';
  emphasizeFirst?: boolean;
  textColor?: string;
  className?: string;
}

const {
  items = [],
  bulletColor = 'navy',
  spacing = 'md',
  textSize = 'lg',
  emphasizeFirst = false,
  textColor = 'text-gray-700',
  className = ''
} = Astro.props;

// Bullet color mappings
const bulletColors = {
  navy: 'bg-texas-navy',
  red: 'bg-texas-red',
  gold: 'bg-texas-gold',
  green: 'bg-green-600'
};

// Spacing mappings
const spacings = {
  sm: 'space-y-2',
  md: 'space-y-3',
  lg: 'space-y-4'
};

// Text size mappings
const textSizes = {
  base: 'text-base',
  lg: 'text-lg',
  xl: 'text-xl'
};
---

<ul class={`${spacings[spacing]} ${className}`}>
  {items.map((item, index) => (
    <li class="flex items-start">
      <span class={`w-2 h-2 ${bulletColors[bulletColor]} rounded-full mt-3 mr-4 flex-shrink-0`}></span>
      <span 
        class={`${textSizes[textSize]} ${textColor} leading-relaxed`}
        set:html={item}
      />
    </li>
  ))}
</ul>