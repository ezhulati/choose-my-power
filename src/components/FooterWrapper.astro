---
// FooterWrapper.astro - Best-in-Class 2025 Footer for All Devices
import { getCredibleMarketingText, DEFAULT_COUNTS } from '../lib/utils/dynamic-counts';
const currentYear = new Date().getFullYear();
const marketingText = getCredibleMarketingText(DEFAULT_COUNTS.providers, DEFAULT_COUNTS.plans);
---

<footer class="footer-modern" role="contentinfo">
  <!-- Main Footer Content -->
  <div class="footer-container">
    <div class="footer-grid">
      
      <!-- Brand Section -->
      <div class="footer-brand">
        <div class="brand-logo">
          <svg class="logo-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
            <title>ChooseMyPower Logo</title>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span class="logo-text">ChooseMyPower</span>
        </div>
        
        <p class="brand-description">
          {marketingText.footerText}
        </p>
        
        <!-- Contact Info -->
        <div class="contact-info" itemscope itemtype="https://schema.org/Organization">
          <meta itemprop="name" content="ChooseMyPower" />
          <meta itemprop="url" content="https://choosemypower.org" />
          <div class="contact-item">
            <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
              <title>Phone</title>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+18002667273" class="contact-link" itemprop="telephone">1-800-COMPARE</a>
          </div>
          <div class="contact-item">
            <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
              <title>Email</title>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:support@choosemypower.org" class="contact-link" itemprop="email">support@choosemypower.org</a>
          </div>
          <div class="contact-item">
            <svg class="contact-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
              <title>Location</title>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span itemprop="areaServed">Serving Texas & Deregulated Markets</span>
          </div>
        </div>

        <!-- Social Links -->
        <div class="social-links">
          <a href="https://twitter.com/choosemypower" class="social-link" aria-label="Follow us on Twitter (opens in new window)" target="_blank" rel="noopener noreferrer">
            <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
              <title>Twitter</title>
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
            </svg>
          </a>
          <a href="https://facebook.com/choosemypower" class="social-link" aria-label="Follow us on Facebook (opens in new window)" target="_blank" rel="noopener noreferrer">
            <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
              <title>Facebook</title>
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
            </svg>
          </a>
          <a href="https://linkedin.com/company/choosemypower" class="social-link" aria-label="Connect on LinkedIn (opens in new window)" target="_blank" rel="noopener noreferrer">
            <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
              <title>LinkedIn</title>
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
          </a>
          <a href="https://instagram.com/choosemypower" class="social-link" aria-label="Follow us on Instagram (opens in new window)" target="_blank" rel="noopener noreferrer">
            <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
              <title>Instagram</title>
              <path d="M12.017 0C8.396 0 7.999.01 6.756.048 5.517.086 4.668.222 3.935.42a7.979 7.979 0 00-2.88 1.875A7.98 7.98 0 00.42 5.175c-.198.733-.334 1.582-.372 2.821C.01 9.239 0 9.636 0 13.017c0 3.381.01 3.778.048 5.021.038 1.239.174 2.088.372 2.821.204 1.126.556 2.08 1.305 2.828a7.98 7.98 0 002.88 1.875c.733.198 1.582.334 2.821.372 1.243.038 1.64.048 5.021.048 3.381 0 3.778-.01 5.021-.048 1.239-.038 2.088-.174 2.821-.372a7.979 7.979 0 002.88-1.875 7.98 7.98 0 001.875-2.88c.198-.733.334-1.582.372-2.821.038-1.243.048-1.64.048-5.021 0-3.381-.01-3.778-.048-5.021-.038-1.239-.174-2.088-.372-2.821a7.979 7.979 0 00-1.875-2.88A7.98 7.98 0 0019.842.42c-.733-.198-1.582-.334-2.821-.372C15.778.01 15.381 0 12.017 0zM12 5.351A6.648 6.648 0 1018.649 12 6.648 6.648 0 0012 5.351zm0 10.946A4.298 4.298 0 1116.298 12 4.298 4.298 0 0112 16.297zM19.68 5.192a1.555 1.555 0 11-3.11 0 1.555 1.555 0 013.11 0z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Navigation Columns -->
      <nav class="footer-nav-section" role="navigation" aria-label="Compare and Shop">
        <h2 class="footer-heading">Compare & Shop</h2>
        <ul class="footer-links">
          <li><a href="/compare" class="footer-link">Compare Plans</a></li>
          <li><a href="/shop/cheapest-electricity" class="footer-link">Cheapest Electricity</a></li>
          <li><a href="/shop/best-electricity-providers" class="footer-link">Best Providers</a></li>
          <li><a href="/shop/green-energy" class="footer-link">Green Energy</a></li>
          <li><a href="/shop/no-deposit-electricity" class="footer-link">No Deposit Plans</a></li>
        </ul>
      </nav>

      <nav class="footer-nav-section" role="navigation" aria-label="Browse by Location">
        <h2 class="footer-heading">Browse by Location</h2>
        <ul class="footer-links">
          <li><a href="/texas" class="footer-link">Texas Providers</a></li>
          <li><a href="/electricity-plans/dallas" class="footer-link">Dallas Electricity</a></li>
          <li><a href="/electricity-plans/houston" class="footer-link">Houston Electricity</a></li>
          <li><a href="/electricity-plans/austin-tx" class="footer-link">Austin Electricity</a></li>
          <li><a href="/locations" class="footer-link">All Locations</a></li>
        </ul>
      </nav>

      <nav class="footer-nav-section" role="navigation" aria-label="Tools and Resources">
        <h2 class="footer-heading">Tools & Resources</h2>
        <ul class="footer-links">
          <li><a href="/rates/calculator" class="footer-link">Rate Calculator</a></li>
          <li><a href="/resources/guides/how-to-switch-providers" class="footer-link">How to Switch</a></li>
          <li><a href="/best" class="footer-link">Best Rankings</a></li>
          <li><a href="/resources/guides" class="footer-link">Electricity Guide</a></li>
          <li><a href="/resources/faqs" class="footer-link">FAQ</a></li>
        </ul>
      </nav>

      <nav class="footer-nav-section" role="navigation" aria-label="Company Information">
        <h2 class="footer-heading">Company</h2>
        <ul class="footer-links">
          <li><a href="/about" class="footer-link">About Us</a></li>
          <li><a href="/resources/support/contact" class="footer-link">Contact</a></li>
          <li><a href="/careers" class="footer-link">Careers</a></li>
          <li><a href="/press" class="footer-link">Press</a></li>
          <li><a href="/blog" class="footer-link">Blog</a></li>
        </ul>
      </nav>

    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="footer-bottom-container">
      <div class="footer-bottom-content">
        <p class="copyright">
          <span aria-label="Copyright">&copy;</span> <time datetime="{currentYear}">{currentYear}</time> ChooseMyPower.org. <span aria-label="All rights reserved">All rights reserved.</span>
        </p>
        
        <div class="legal-links">
          <a href="/privacy-policy" class="legal-link">Privacy Policy</a>
          <a href="/terms-of-service" class="legal-link">Terms of Service</a>
          <a href="/accessibility" class="legal-link">Accessibility</a>
          <a href="/sitemap" class="legal-link">Sitemap</a>
        </div>
      </div>

      <!-- Trust Indicators -->
      <div class="trust-indicators" role="complementary" aria-label="Security and trust indicators">
        <div class="trust-item">
          <svg class="trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
            <title>SSL Security</title>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          <span class="trust-badge">SSL Secured</span>
        </div>
        <div class="trust-item">
          <svg class="trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
            <title>BBB Accreditation</title>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="trust-badge">BBB Accredited</span>
        </div>
        <div class="trust-item">
          <svg class="trust-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" role="img" aria-hidden="true">
            <title>Provider Network</title>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span class="trust-badge">{DEFAULT_COUNTS.providerText.replace('trusted ', '').replace('licensed ', '')}</span>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
/* Trust badge styles for single-line formatting */
.trust-indicators {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  align-items: center;
  justify-content: center;
}

.trust-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  white-space: nowrap; /* Prevent line breaks */
}

.trust-icon {
  width: 1rem;
  height: 1rem;
  color: #16a34a; /* green-600 */
  flex-shrink: 0;
}

.trust-badge {
  font-size: 0.75rem; /* text-xs */
  color: #16a34a; /* green-600 */
  font-weight: 500;
  white-space: nowrap; /* Ensure single-line */
}

/* Footer heading single-line formatting */
.footer-heading {
  white-space: nowrap; /* Prevent line breaks */
  word-break: keep-all; /* Keep words together */
}

@media (max-width: 768px) {
  .trust-indicators {
    gap: 0.75rem;
  }
  
  .trust-item {
    gap: 0.25rem;
  }
  
  .trust-badge {
    font-size: 0.7rem;
  }
}
</style>