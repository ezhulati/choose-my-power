---
/**
 * Electricity Plans Page - Browse All Texas Plans
 * Professional design using shadcn components and Texas flag design system
 * Mobile-first responsive layout with enhanced UX
 */

import Layout from '../layouts/Layout.astro';
import HeroBackground from '../components/HeroBackground.astro';
import StandardZipInput from '../components/StandardZipInput.astro';
import { Badge } from '../components/ui/badge';
import { Button } from '../components/ui/button';
import { Card, CardContent, CardHeader, CardTitle } from '../components/ui/card';
import { Input } from '../components/ui/input';
import { EnterprisePlanCard } from '../components/ui/EnterprisePlanCard';
import { getCredibleMarketingText, DEFAULT_COUNTS } from '../lib/utils/dynamic-counts';
import EnhancedSection from '../components/ui/EnhancedSection.astro';
import EnhancedCard from '../components/ui/EnhancedCard.astro';
import EnhancedList from '../components/ui/EnhancedList.astro';
import AccentBox from '../components/ui/AccentBox.astro';

const title = "Texas Electricity Plans - Compare Real Rates & Find Your Best Deal";
const marketingText = getCredibleMarketingText(DEFAULT_COUNTS.providers, DEFAULT_COUNTS.plans);
const description = `Compare real electricity rates from ${DEFAULT_COUNTS.providerText} across Texas. No hidden fees, no teaser rates - just honest pricing to help you find the best electricity plan for your home.`;

// Professional plan data for EnterprisePlanCard component
const samplePlans = [
  {
    id: "1",
    name: "Pollution Free e-Plus 12",
    provider: "Green Mountain Energy",
    rate: 8.9,
    contractTerm: "12 months",
    planType: "fixed" as const,
    greenEnergy: true,
    noDeposit: true,
    topRated: false,
    features: ["100% Renewable", "No Deposit", "Fixed Rate"],
    slug: "pollution-free-e-plus-12"
  },
  {
    id: "2",
    name: "Free Nights & Weekends 12",
    provider: "TXU Energy",
    rate: 15.2,
    contractTerm: "12 months",
    planType: "variable" as const,
    greenEnergy: false,
    noDeposit: false,
    topRated: true,
    features: ["Free Nights", "Weekend Rewards", "Time of Use"],
    slug: "free-nights-weekends-12"
  },
  {
    id: "3",
    name: "Simply Secure 24",
    provider: "Direct Energy",
    rate: 11.4,
    contractTerm: "24 months",
    planType: "fixed" as const,
    greenEnergy: false,
    noDeposit: false,
    topRated: false,
    features: ["Long Term", "Rate Lock", "Stable Pricing"],
    slug: "simply-secure-24"
  }
];
---

<Layout title={title} description={description}>
  <main class="min-h-screen bg-background">
    <!-- Hero Section using EnhancedSection -->
    <EnhancedSection 
      background="gradient-navy" 
      padding="xl" 
      maxWidth="6xl"
    >
      <div class="text-center text-white">
        <div class="inline-block mb-6">
          <AccentBox accentColor="gold" background="white" padding="sm">
            <span class="text-texas-navy font-medium text-sm">All Texas Plans</span>
          </AccentBox>
        </div>
        
        <!-- Enhanced Typography -->
        <div class="space-y-6">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight max-w-4xl mx-auto">
            Texas Electricity Plans with <span class="text-texas-gold">Real Rates</span>
          </h1>
          
          <p class="text-lg md:text-xl text-blue-100 font-normal max-w-3xl mx-auto leading-relaxed">
            You've seen the <strong class="text-texas-red">"6.9¢" rates that cost 14¢.</strong> We show actual monthly costs from 
            <span class="font-bold">{DEFAULT_COUNTS.providerText} across {DEFAULT_COUNTS.cities}+ Texas cities.</span>
          </p>
          
          <div class="max-w-2xl mx-auto">
            <AccentBox accentColor="gold" background="white" padding="lg">
              <p class="text-lg text-texas-navy font-semibold">
                <span class="text-texas-gold">Real pricing, no teaser rates.</span> 
                Find your best electricity plan in minutes.
              </p>
            </AccentBox>
          </div>
        </div>

        <!-- Search Input -->
        <div class="max-w-lg mx-auto mt-8">
          <StandardZipInput 
            variant="hero" 
            size="lg"
            showTitle={false}
            showDescription={false}
            showStats={false}
            customClass="max-w-lg mx-auto"
          />
        </div>
      </div>
    </EnhancedSection>

    <!-- Search and Filter Section using EnhancedCard -->
    <EnhancedSection background="white" padding="md">
      <EnhancedCard variant="elevated" padding="lg">
        <div class="flex flex-col lg:flex-row gap-4 mb-6">
          <div class="flex-1 relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <Input placeholder="Search plans by name or provider..." className="pl-10" />
          </div>
          <Button variant="texas-primary" size="lg">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.121A1 1 0 013 6.414V4z" />
            </svg>
            Advanced Filters
          </Button>
        </div>
        
        <div class="flex flex-wrap gap-3">
          <Badge variant="texas-outline" className="cursor-pointer">Fixed Rate Plans</Badge>
          <Badge variant="success" className="cursor-pointer">100% Renewable</Badge>
          <Badge variant="texas-accent" className="cursor-pointer">No Deposit Required</Badge>
          <Badge variant="info" className="cursor-pointer">Free Nights & Weekends</Badge>
          <Badge variant="outline" className="cursor-pointer">12 Month Terms</Badge>
        </div>
      </EnhancedCard>

      <!-- Enhanced Results Summary -->
      <EnhancedCard variant="gradient" padding="lg">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-texas-navy mb-2">
              <span class="text-texas-red">347 Plans</span> Available
            </h2>
            <p class="text-lg text-gray-700 font-medium">
              Real rates from <strong class="text-texas-gold">licensed Texas electricity providers</strong>
            </p>
          </div>
          <div class="flex items-center gap-4 mt-4 sm:mt-0">
            <span class="text-lg font-semibold text-texas-navy">Sort by:</span>
            <select class="border-2 border-texas-navy/20 rounded-xl px-4 py-3 text-base bg-white shadow-lg hover:border-texas-navy transition-colors focus:ring-4 focus:ring-texas-navy/20 focus:border-texas-navy">
              <option>Lowest Rate First</option>
              <option>Highest Customer Rating</option>
              <option>Shortest Contract Term</option>
              <option>Most Popular Plans</option>
              <option>100% Green Energy</option>
            </select>
          </div>
        </div>
      </EnhancedCard>

      <!-- Professional Plan Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {samplePlans.map((plan) => (
          <EnterprisePlanCard 
            key={plan.id} 
            plan={plan}
            client:load
            className="h-full"
          />
        ))}
      </div>

      <!-- Enhanced More Plans Link -->
      <div class="text-center mt-12">
        <AccentBox accentColor="navy" padding="md">
          <p class="text-lg text-gray-700 font-semibold">
            Showing sample plans • <a href="/texas/houston" class="text-texas-navy hover:text-texas-red font-bold transition-colors">View all plans for Houston</a> or <a href="/texas/dallas" class="text-texas-navy hover:text-texas-red font-bold transition-colors">Dallas</a>
          </p>
        </AccentBox>
      </div>
    </EnhancedSection>

    <!-- Enhanced Information Section -->
    <EnhancedSection background="cream" padding="xl">
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <EnhancedCard variant="elevated" padding="lg">
          <div class="text-center">
            <div class="w-16 h-16 bg-texas-red/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-texas-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-texas-navy mb-4">Real Rates Only</h3>
            <p class="text-lg text-gray-700 leading-relaxed">
              No <strong class="text-texas-red">"teaser rates"</strong> that jump after 3 months. Every rate shown is what you'll actually pay.
            </p>
          </div>
        </EnhancedCard>

        <EnhancedCard variant="elevated" padding="lg">
          <div class="text-center">
            <div class="w-16 h-16 bg-texas-gold/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-texas-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-texas-navy mb-4">Licensed Providers</h3>
            <p class="text-lg text-gray-700 leading-relaxed">
              Only companies <strong class="text-texas-gold">licensed by the Public Utility Commission</strong> of Texas. No scammers.
            </p>
          </div>
        </EnhancedCard>

        <EnhancedCard variant="elevated" padding="lg">
          <div class="text-center">
            <div class="w-16 h-16 bg-texas-navy/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-texas-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-texas-navy mb-4">Always Free</h3>
            <p class="text-lg text-gray-700 leading-relaxed">
              We're paid by providers when you sign up. <strong class="text-texas-navy">You pay the same rate</strong> either way.
            </p>
          </div>
        </EnhancedCard>
      </div>

      <!-- Enhanced CTA Section -->
      <EnhancedCard variant="gradient" padding="xl">
        <div class="text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-texas-navy mb-6">
            Still Need Help Finding the Right Plan?
          </h2>
          <p class="text-lg text-gray-700 mb-8 max-w-3xl mx-auto leading-relaxed">
            Texas electricity is <strong class="text-texas-red">intentionally complicated.</strong> We've figured out the system. 
            <span class="text-texas-navy font-bold">Get honest guidance from someone who won't try to sell you anything.</span>
          </p>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center">
            <Button variant="texas-primary" size="lg">Get Expert Help</Button>
            <Button variant="outline" size="lg">View Comparison Guide</Button>
          </div>
        </div>
      </EnhancedCard>
    </EnhancedSection>
  </main>
</Layout>