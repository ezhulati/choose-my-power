---
/**
 * Electricity Plans Page - Browse All Texas Plans
 * Professional design using shadcn components and Texas flag design system
 * Mobile-first responsive layout with enhanced UX
 */

import Layout from '../layouts/Layout.astro';
import HeroBackground from '../components/HeroBackground.astro';
import { ZipCodeSearch } from '../components/ZipCodeSearch';
import { Badge } from '../components/ui/badge';
import { Button } from '../components/ui/button';
import { Card, CardContent, CardHeader, CardTitle } from '../components/ui/card';
import { Input } from '../components/ui/input';
import { getCredibleMarketingText, DEFAULT_COUNTS } from '../lib/utils/dynamic-counts';

const title = "Texas Electricity Plans | Browse All Available Plans";
const marketingText = getCredibleMarketingText(DEFAULT_COUNTS.providers, DEFAULT_COUNTS.plans);
const description = `Browse all available electricity plans in Texas. ${marketingText.combinedText} with transparent pricing.`;

// Sample plan data using shadcn design system structure
const samplePlans = [
  {
    id: "1",
    provider: "Green Mountain Energy",
    planName: "Pollution Free e-Plus 12",
    rate: 8.9,
    rateType: "fixed" as const,
    contractLength: 12,
    greenEnergy: 100,
    estimatedMonthlyCost: 98.95,
    features: ["100% Renewable", "No Deposit", "Fixed Rate"],
    rating: 4.8,
    reviewCount: 2847,
    isFeatured: true,
    savings: 156
  },
  {
    id: "2",
    provider: "TXU Energy", 
    planName: "Free Nights & Weekends 12",
    rate: 15.2,
    rateType: "variable" as const,
    contractLength: 12,
    estimatedMonthlyCost: 104.50,
    features: ["Free Nights", "Weekend Rewards", "Time of Use"],
    rating: 4.5,
    reviewCount: 1923,
    isPopular: true
  },
  {
    id: "3",
    provider: "Direct Energy",
    planName: "Simply Secure 24", 
    rate: 11.4,
    rateType: "fixed" as const,
    contractLength: 24,
    greenEnergy: 25,
    estimatedMonthlyCost: 124.80,
    features: ["Long Term", "Rate Lock", "Stable Pricing"],
    rating: 4.2,
    reviewCount: 856
  }
];
---

<Layout title={title} description={description}>
  <main class="min-h-screen bg-background">
    <!-- Hero Section -->
    <HeroBackground 
      imageUrl="/images/hero/texas-electricity-plans.jpg"
      overlayOpacity={0.75}
    >
      <section class="text-white flex items-center justify-center min-h-[40vh] lg:min-h-[50vh]">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center">
          <Badge variant="texas-accent" className="mb-6 text-lg px-6 py-3">
            All Texas Plans
          </Badge>
          
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-8 drop-shadow-lg">
            Browse Electricity Plans
          </h1>
          
          <p class="text-xl lg:text-2xl text-blue-100 mb-8 drop-shadow-md leading-relaxed max-w-4xl mx-auto">
            Compare {DEFAULT_COUNTS.plans}+ plans from {DEFAULT_COUNTS.providers}+ providers across all {DEFAULT_COUNTS.cities}+ Texas cities
          </p>

          <div class="max-w-md mx-auto">
            <ZipCodeSearch 
              client:load
              placeholder="Enter zip code"
              className="w-full"
            />
          </div>
        </div>
      </section>
    </HeroBackground>

    <!-- Search and Filter Section using shadcn Card -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <Card variant="elevated" className="mb-8">
        <CardContent className="p-6">
          <div class="flex flex-col lg:flex-row gap-4 mb-6">
            <div class="flex-1 relative">
              <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <Input placeholder="Search plans by name or provider..." className="pl-10" />
            </div>
            <Button variant="texas-primary" size="lg">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.121A1 1 0 013 6.414V4z" />
              </svg>
              Advanced Filters
            </Button>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <Badge variant="texas-outline" className="cursor-pointer">Fixed Rate Plans</Badge>
            <Badge variant="success" className="cursor-pointer">100% Renewable</Badge>
            <Badge variant="texas-accent" className="cursor-pointer">No Deposit Required</Badge>
            <Badge variant="info" className="cursor-pointer">Free Nights & Weekends</Badge>
            <Badge variant="outline" className="cursor-pointer">12 Month Terms</Badge>
          </div>
        </CardContent>
      </Card>

      <!-- Results Summary -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
        <div>
          <h2 class="text-3xl font-bold text-foreground mb-2">347 Plans Found</h2>
          <p class="text-muted-foreground">Showing plans available statewide in Texas</p>
        </div>
        <div class="flex items-center gap-4 mt-4 sm:mt-0">
          <span class="text-sm font-medium text-muted-foreground">Sort by:</span>
          <select class="border border-input rounded-lg px-4 py-2 text-sm bg-background shadow-sm">
            <option>Lowest Rate First</option>
            <option>Highest Customer Rating</option>
            <option>Shortest Contract Term</option>
            <option>Most Popular Plans</option>
            <option>100% Green Energy</option>
          </select>
        </div>
      </div>

      <!-- Plans Grid using shadcn Card system -->
      <div class="space-y-6">
        {samplePlans.map((plan) => (
          <Card key={plan.id} variant={plan.isFeatured ? "featured" : plan.isPopular ? "popular" : "plan-card"}>
            <CardContent className="p-6">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6">
                <div class="flex items-start gap-4 mb-4 sm:mb-0">
                  <div class="w-14 h-14 bg-muted rounded-xl flex items-center justify-center flex-shrink-0">
                    {plan.greenEnergy === 100 ? (
                      <svg class="h-7 w-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                      </svg>
                    ) : (
                      <svg class="h-7 w-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                    )}
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                      <h3 class="text-xl font-bold text-card-foreground">{plan.planName}</h3>
                      {plan.isFeatured && <Badge variant="texas-secondary">Top Choice</Badge>}
                      {plan.isPopular && <Badge variant="texas-accent">Best Value</Badge>}
                    </div>
                    <p class="text-muted-foreground font-medium">{plan.provider}</p>
                    {plan.rating && (
                      <div class="flex items-center gap-1 mt-2">
                        <div class="flex">
                          {[...Array(5)].map((_, i) => (
                            <svg key={i} class={`w-4 h-4 ${i < Math.floor(plan.rating) ? 'text-yellow-400 fill-current' : 'text-gray-300'}`} viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                          ))}
                        </div>
                        <span class="text-sm text-muted-foreground ml-1">
                          {plan.rating} ({plan.reviewCount?.toLocaleString()} reviews)
                        </span>
                      </div>
                    )}
                  </div>
                </div>
                
                <Card variant="texas-themed" className="text-center sm:text-right p-4">
                  <div class="text-3xl font-bold text-texas-navy mb-1">
                    {plan.rate}Â¢
                  </div>
                  <div class="text-sm text-muted-foreground font-medium">/kWh</div>
                  {plan.savings && (
                    <Badge variant="success" className="text-xs mt-1">
                      Save ${plan.savings}/year
                    </Badge>
                  )}
                </Card>
              </div>
              
              <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-6">
                <div class="text-center sm:text-left">
                  <div class="text-sm text-muted-foreground mb-1 font-medium">Contract Term</div>
                  <div class="font-bold text-card-foreground">{plan.contractLength} months</div>
                </div>
                <div class="text-center sm:text-left">
                  <div class="text-sm text-muted-foreground mb-1 font-medium">Rate Type</div>
                  <div class="font-bold text-card-foreground capitalize">{plan.rateType}</div>
                </div>
                <div class="text-center sm:text-left">
                  <div class="text-sm text-muted-foreground mb-1 font-medium">Green Energy</div>
                  <div class="font-bold text-primary">{plan.greenEnergy || 0}%</div>
                </div>
                <div class="text-center sm:text-left">
                  <div class="text-sm text-muted-foreground mb-1 font-medium">Est. Monthly Cost</div>
                  <div class="font-bold text-card-foreground">${plan.estimatedMonthlyCost}</div>
                </div>
              </div>
              
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div class="flex flex-wrap gap-2">
                  {plan.features?.map((feature, index) => (
                    <Badge key={index} variant="outline" className="text-xs">
                      {feature}
                    </Badge>
                  ))}
                </div>
                
                <div class="flex gap-3">
                  <Button variant="outline" size="default">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    Compare
                  </Button>
                  <Button variant="texas-primary">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    View Details
                  </Button>
                </div>
              </div>
            </CardContent>
          </Card>
        ))}
      </div>

      <!-- Load More -->
      <div class="text-center mt-12">
        <Button variant="texas-accent" size="xl">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Load More Plans (344 remaining)
        </Button>
        <p class="text-sm text-muted-foreground mt-3">
          Showing 3 of 347 available plans â¢ Updated in real-time
        </p>
      </div>
    </div>

    <!-- CTA Section -->
    <Card variant="texas-themed" className="mx-4 sm:mx-6 lg:mx-8 mb-8">
      <CardContent className="py-16 text-center">
        <CardTitle className="text-3xl lg:text-4xl font-bold text-texas-navy mb-6">
          Need Help Choosing the Right Plan?
        </CardTitle>
        <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
          Our Texas energy experts can help you find the right electricity plan 
          for your home or business needs.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="texas-accent" size="lg">Get Expert Help</Button>
          <Button variant="texas-outline" size="lg">View Plan Comparison Guide</Button>
        </div>
      </CardContent>
    </Card>
  </main>
</Layout>