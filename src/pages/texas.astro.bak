---
import Layout from '../layouts/Layout.astro';
import { TexasPage } from './_components/TexasPage';

const title = "Texas Electricity: How to Not Get Ripped Off | Real Guide for Texans";
const description = "Texas electricity is confusing on purpose. We make it simple. Find out who actually serves your ZIP, what you'll really pay, and how to switch without getting screwed.";
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/texas_state_overview_16x9.png">
  <TexasPage client:load />
  
  <script>
    // Client-side navigation function for React components
    window.navigateToPath = function(path) {
      window.location.href = path;
    };
  </script>
</Layout>