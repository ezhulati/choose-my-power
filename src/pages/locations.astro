---
import Layout from '../layouts/Layout.astro';
import LocationsPage from './_components/LocationsPage';

const title = "Electricity by Location | Find Providers in Your Area";
const description = "Find electricity providers by state and city. Coverage maps and local energy companies serving deregulated electricity markets across the US.";
// Cache busting comment for deployment
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/texas_state_overview_16x9.png">
  <LocationsPage client:load onNavigate={(path) => window.location.href = path} />
</Layout>