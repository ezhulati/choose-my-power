---
import Layout from '../../layouts/Layout.astro';
import { CalculatorPage } from '../_components/CalculatorPage';

const title = "Electricity Rate Calculator | Estimate Your Monthly Bill";
const description = "Calculate your monthly electricity costs based on usage and compare different plans. Free rate calculator for Texas and other deregulated markets.";
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/rate_calculator_16x9.png">
  <CalculatorPage client:load />
  
  <script>
    // Client-side navigation function for React components
    window.navigateToPath = function(path) {
      window.location.href = path;
    };
  </script>
</Layout>