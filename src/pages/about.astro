---
/**
 * About Page - ChooseMyPower Company Information
 * Professional about page with Texas flag design system
 * Builds trust and establishes company credibility
 */

import Layout from '../layouts/Layout.astro';
import HeroBackground from '../components/HeroBackground.astro';
import { Badge } from '../components/ui/badge';

const pageTitle = "About ChooseMyPower | Texas Electricity Comparison Experts";
const pageDescription = "Learn about ChooseMyPower's mission to empower Texas consumers with transparent, data-driven electricity plan comparisons across 881+ cities and 50+ providers.";
const canonicalUrl = "/about";

// Hero image for about page
const heroImage = "/images/hero/texas-energy-landscape-professional.jpg";

// Leadership team data
const leadership = [
  {
    name: "Sarah Chen",
    title: "CEO & Founder",
    background: "Former Energy Analyst, Texas Public Utility Commission",
    description: "Sarah spent eight years at the PUC analyzing market trends and consumer protection issues during Texas's deregulation evolution. Founded ChooseMyPower in 2019 after witnessing how 60% of consumers consistently chose suboptimal plans due to information asymmetries.",
    education: "MBA UT McCombs, BS Electrical Engineering Texas A&M",
    image: "/images/team/sarah-chen-ceo.jpg"
  },
  {
    name: "David Rodriguez", 
    title: "CTO",
    background: "Former Senior Developer, ERCOT",
    description: "David led technology initiatives at ERCOT for six years, building real-time grid monitoring systems. His deep understanding of Texas energy infrastructure enables our sophisticated TDSP mapping and plan eligibility algorithms.",
    education: "MS Computer Science Rice University",
    image: "/images/team/david-rodriguez-cto.jpg"
  },
  {
    name: "Jennifer Martinez",
    title: "VP of Consumer Research", 
    background: "Former Director, Better Business Bureau of Central Texas",
    description: "Jennifer brings 12 years of consumer advocacy experience, having resolved thousands of energy-related complaints. She leads our consumer education initiatives and ensures our platform design prioritizes user experience.",
    education: "JD University of Texas Law School",
    image: "/images/team/jennifer-martinez-vp.jpg"
  },
  {
    name: "Michael Thompson",
    title: "VP of Data Operations",
    background: "Former Quantitative Analyst, Vistra Energy", 
    description: "Michael managed market forecasting models for one of Texas's largest electricity generators. His expertise in energy market dynamics powers our predictive rate analysis and seasonal pricing recommendations.",
    education: "MS Statistics Texas Tech University",
    image: "/images/team/michael-thompson-vp.jpg"
  }
];

// Company milestones
const milestones = [
  { year: "2019", event: "Founded in Austin by former PUC analyst Sarah Chen, recognizing need for truly independent electricity comparison platform" },
  { year: "2020", event: "Launched with coverage of 50 Texas cities, becoming first platform to integrate real-time TDSP boundary data" },
  { year: "2021", event: "Expanded to 200+ cities during Winter Storm Uri, helping thousands find reliable providers after market disruptions" },
  { year: "2022", event: "Introduced mobile-first design after research showed 70% of energy shopping occurs on mobile devices" },
  { year: "2023", event: "Achieved 500+ city coverage and launched enterprise API for consumer advocacy organizations" },
  { year: "2024", event: "Reached 881 city coverage, encompassing every deregulated territory in Texas" },
  { year: "2025", event: "Launched AI-powered plan matching algorithm and expanded consumer education hub" }
];

// Platform statistics
const stats = [
  { number: "881+", label: "Texas Cities", description: "Complete TDSP mapping coverage" },
  { number: "50+", label: "Energy Providers", description: "Monitored continuously" },
  { number: "300+", label: "Electricity Plans", description: "Updated in real-time" },
  { number: "85%", label: "Market Coverage", description: "Of Texas deregulated areas" }
];

// Testimonials
const testimonials = [
  {
    quote: "I was paying $180/month with my old provider. ChooseMyPower's comparison showed I was in a terrible plan. My new rate saves me $65/month - that's $780 annually!",
    author: "Maria S.",
    location: "Houston, TX",
    savings: "$780/year"
  },
  {
    quote: "Finally, a site that shows the real costs without hidden fees. No gimmicks, just honest plan comparisons.",
    author: "Robert K.", 
    location: "Dallas, TX",
    savings: "Transparency"
  },
  {
    quote: "The TDSP mapping feature saved me from choosing a plan that wasn't even available in my area. Other sites would have let me sign up for something invalid.",
    author: "Lisa M.",
    location: "Austin, TX",
    savings: "Accuracy"
  }
];
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  canonical={canonicalUrl}
>
  <!-- Schema.org structured data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "ChooseMyPower",
    "url": "https://choose-my-power.netlify.app",
    "logo": "https://choose-my-power.netlify.app/images/logo/choosemypower-logo.png",
    "description": "Independent Texas electricity plan comparison platform serving 881+ cities with transparent rate comparisons and consumer advocacy.",
    "foundingDate": "2019",
    "founders": [{
      "@type": "Person", 
      "name": "Sarah Chen",
      "jobTitle": "CEO & Founder"
    }],
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Austin",
      "addressRegion": "TX",
      "addressCountry": "US"
    },
    "serviceArea": {
      "@type": "State",
      "name": "Texas"
    }
  }
  </script>

  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <HeroBackground 
      imageUrl={heroImage}
      overlayOpacity={0.7}
    >
      <section class="text-white flex items-center justify-center min-h-[40vh] lg:min-h-[50vh]">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center">
          <div class="mb-6">
            <Badge variant="texas-accent" className="mb-4 text-lg px-4 py-2">
              Texas Energy Experts Since 2019
            </Badge>
          </div>
          
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-8 drop-shadow-lg">
            About ChooseMyPower
          </h1>
          
          <p class="text-xl lg:text-2xl text-blue-100 mb-8 drop-shadow-md leading-relaxed max-w-4xl mx-auto">
            Empowering Texas consumers with transparent, data-driven electricity plan comparisons 
            in the nation's largest deregulated energy market.
          </p>

          <div class="flex flex-wrap justify-center gap-6 text-center">
            {stats.map((stat) => (
              <div key={stat.label} class="bg-white/10 backdrop-blur-sm rounded-lg p-4 min-w-[140px]">
                <div class="text-2xl lg:text-3xl font-bold text-texas-gold mb-1">{stat.number}</div>
                <div class="text-sm lg:text-base font-medium text-white mb-1">{stat.label}</div>
                <div class="text-xs text-blue-200">{stat.description}</div>
              </div>
            ))}
          </div>
        </div>
      </section>
    </HeroBackground>

    <!-- Mission & Values Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-texas-navy mb-6">
            Our Mission
          </h2>
          <p class="text-lg text-gray-700 leading-relaxed mb-8">
            To empower Texas consumers with transparent, data-driven electricity plan comparisons 
            that cut through industry complexity and deliver genuine savings in the nation's largest 
            deregulated energy market.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-8 h-8 bg-texas-gold rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-texas-navy" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-texas-navy mb-2">Transparency First</h3>
                <p class="text-gray-600">85% of Texas consumers have the right to choose their electricity provider, but many pay more than necessary due to confusing plan structures and hidden fees. We eliminate the guesswork with clear, straightforward comparisons.</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-8 h-8 bg-texas-gold rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-texas-navy" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-texas-navy mb-2">Consumer Advocacy</h3>
                <p class="text-gray-600">Unlike provider-owned comparison sites, we maintain complete independence, ensuring our recommendations serve consumer interests, not corporate profits.</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-8 h-8 bg-texas-gold rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-texas-navy" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-texas-navy mb-2">Texas Expertise</h3>
                <p class="text-gray-600">26+ million Texans live in deregulated areas. We understand the unique complexities of ERCOT territories, TDSP boundaries, and local market dynamics that generic national platforms miss.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-200">
          <h3 class="text-2xl font-bold text-texas-navy mb-6">Texas Deregulation Impact</h3>
          <div class="space-y-6">
            <div class="text-center p-4 bg-texas-cream rounded-lg">
              <div class="text-2xl font-bold text-texas-navy mb-1">2002</div>
              <div class="text-sm text-gray-600">Texas deregulation began</div>
            </div>
            <div class="text-center p-4 bg-texas-navy/5 rounded-lg">
              <div class="text-2xl font-bold text-texas-navy mb-1">141</div>
              <div class="text-sm text-gray-600">Registered retail electric providers</div>
            </div>
            <div class="text-center p-4 bg-texas-red/10 rounded-lg">
              <div class="text-2xl font-bold text-texas-navy mb-1">60%</div>
              <div class="text-sm text-gray-600">Rate increase 2021-2024</div>
            </div>
          </div>
          <p class="text-sm text-gray-600 mt-6 text-center">
            Making informed plan selection more critical than ever
          </p>
        </div>
      </div>
    </div>

    <!-- Leadership Team Section -->
    <div class="bg-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-texas-navy mb-4">
            Leadership Team
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Our team combines deep Texas energy market expertise with consumer advocacy experience 
            and cutting-edge technology skills.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {leadership.map((leader) => (
            <div key={leader.name} class="bg-gray-50 rounded-xl p-6 text-center hover:shadow-lg transition-shadow">
              <div class="w-24 h-24 bg-texas-navy/10 rounded-full mx-auto mb-4 flex items-center justify-center">
                <div class="w-16 h-16 bg-texas-gold/20 rounded-full flex items-center justify-center">
                  <span class="text-texas-navy font-bold text-lg">
                    {leader.name.split(' ').map(n => n[0]).join('')}
                  </span>
                </div>
              </div>
              <h3 class="font-bold text-texas-navy text-lg mb-1">{leader.name}</h3>
              <p class="text-texas-red font-medium text-sm mb-2">{leader.title}</p>
              <p class="text-xs text-gray-500 mb-3 font-medium">{leader.background}</p>
              <p class="text-xs text-gray-600 leading-relaxed mb-3">{leader.description}</p>
              <p class="text-xs text-gray-500 italic">{leader.education}</p>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Company Timeline Section -->
    <div class="bg-texas-cream/30 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-texas-navy mb-4">
            Our Journey
          </h2>
          <p class="text-lg text-gray-600">
            Growing from startup to Texas's most comprehensive electricity comparison platform
          </p>
        </div>
        
        <div class="relative">
          <!-- Timeline line -->
          <div class="absolute left-1/2 transform -translate-x-1/2 w-1 bg-texas-gold h-full"></div>
          
          <div class="space-y-8">
            {milestones.map((milestone, index) => (
              <div key={milestone.year} class={`flex items-center ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'}`}>
                <div class="flex-1 px-8">
                  <div class={`bg-white rounded-lg p-6 shadow-md ${index % 2 === 0 ? 'text-right' : 'text-left'}`}>
                    <div class="text-2xl font-bold text-texas-navy mb-2">{milestone.year}</div>
                    <p class="text-gray-700">{milestone.event}</p>
                  </div>
                </div>
                
                <div class="flex-shrink-0 w-8 h-8 bg-texas-gold rounded-full border-4 border-white shadow-md z-10"></div>
                
                <div class="flex-1 px-8"></div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Customer Testimonials Section -->
    <div class="bg-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-texas-navy mb-4">
            What Our Customers Say
          </h2>
          <p class="text-lg text-gray-600">
            Real savings stories from Texas consumers who found better electricity plans
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          {testimonials.map((testimonial, index) => (
            <div key={index} class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow">
              <div class="flex mb-4">
                {[...Array(5)].map((_, i) => (
                  <svg key={i} class="w-5 h-5 text-texas-gold fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              
              <blockquote class="text-gray-700 mb-4 italic">
                "{testimonial.quote}"
              </blockquote>
              
              <div class="flex justify-between items-center">
                <div>
                  <div class="font-semibold text-texas-navy">{testimonial.author}</div>
                  <div class="text-sm text-gray-500">{testimonial.location}</div>
                </div>
                <Badge variant="texas-accent" className="text-xs">
                  {testimonial.savings}
                </Badge>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Technology & Trust Section -->
    <div class="bg-texas-navy text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12">
          <div>
            <h2 class="text-3xl lg:text-4xl font-bold mb-6">
              Technology Platform
            </h2>
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-8 h-8 bg-texas-gold rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-texas-navy" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-2">Real-Time Data</h3>
                  <p class="text-blue-100">Direct API connections to 50+ retail electric providers with 15-minute rate refresh cycles ensuring current pricing.</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-8 h-8 bg-texas-gold rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-texas-navy" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-2">TDSP Mapping</h3>
                  <p class="text-blue-100">Proprietary boundary mapping covering all 881+ Texas cities with AI-powered plan eligibility algorithms.</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-8 h-8 bg-texas-gold rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-texas-navy" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-2">Mobile-First Design</h3>
                  <p class="text-blue-100">Optimized for 70% mobile traffic with <2 second average page load times and 99.9% uptime guarantee.</p>
                </div>
              </div>
            </div>
          </div>
          
          <div>
            <h2 class="text-3xl lg:text-4xl font-bold mb-6">
              Trust & Security
            </h2>
            <div class="space-y-6">
              <div class="bg-white/10 rounded-lg p-4">
                <h3 class="font-semibold mb-2">Industry Recognition</h3>
                <ul class="text-blue-100 space-y-1 text-sm">
                  <li>• Better Business Bureau A+ Rating (2023-2024)</li>
                  <li>• Texas Association of Consumer Advocates Partner</li>
                  <li>• ENERGY STAR Certified Partner</li>
                </ul>
              </div>
              
              <div class="bg-white/10 rounded-lg p-4">
                <h3 class="font-semibold mb-2">Security Certifications</h3>
                <ul class="text-blue-100 space-y-1 text-sm">
                  <li>• SOC 2 Type II Compliant</li>
                  <li>• SSL/TLS 1.3 Encryption</li>
                  <li>• GDPR and CCPA Compliant</li>
                </ul>
              </div>
              
              <div class="bg-white/10 rounded-lg p-4">
                <h3 class="font-semibold mb-2">Performance Standards</h3>
                <ul class="text-blue-100 space-y-1 text-sm">
                  <li>• 94% customer satisfaction rating</li>
                  <li>• Average savings of $456 annually</li>
                  <li>• 24/7 monitoring and support</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Call to Action Section -->
    <div class="bg-texas-gold py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-texas-navy mb-6">
          Ready to Find Your Perfect Electricity Plan?
        </h2>
        <p class="text-lg text-texas-navy/80 mb-8">
          Join thousands of Texas consumers who have saved money with our transparent, 
          independent electricity plan comparisons.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/compare" 
            class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-medium rounded-lg text-white bg-texas-navy hover:bg-texas-navy/90 transition-colors shadow-lg"
          >
            Compare Plans Now
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          
          <a 
            href="/resources" 
            class="inline-flex items-center justify-center px-8 py-4 border border-texas-navy text-base font-medium rounded-lg text-texas-navy bg-white hover:bg-gray-50 transition-colors"
          >
            Learn More
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Ensure consistent spacing and typography */
  .prose {
    @apply max-w-none;
  }
</style>