---
import Layout from '../../../layouts/Layout.astro';
import HeroBackground from '../../../components/HeroBackground.astro';
import { Award, Star, Users, TrendingUp, Shield, Zap, Building2 } from 'lucide-react';

const title = "Top 5 Texas Electricity Providers 2024 | ChooseMyPower";
const description = "Expert ranking of the top 5 electricity providers in Texas based on customer satisfaction, rates, and service quality. Updated monthly.";
---

<Layout title={title} description={description}>
  <div class="bg-white">
    <!-- Hero Section -->
    <HeroBackground 
      title="Top 5 Texas Electricity Providers" 
      subtitle="Expert rankings based on customer satisfaction and value"
      variant="rankings"
    >
    </HeroBackground>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- Rankings Grid -->
      <div class="space-y-8">
        
        <!-- #1 Provider -->
        <div class="bg-gradient-to-r from-yellow-50 to-yellow-100 border-2 border-yellow-300 rounded-xl p-8 relative">
          <div class="absolute -top-4 left-8">
            <div class="bg-yellow-500 text-white px-4 py-2 rounded-full font-bold text-lg flex items-center space-x-2">
              <Award class="h-5 w-5" />
              <span>#1</span>
            </div>
          </div>
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mt-4">
            <div class="lg:col-span-2">
              <div class="flex items-center space-x-4 mb-4">
                <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center">
                  <Building2 class="h-8 w-8 text-green-600" />
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900">Green Mountain Energy</h3>
                  <div class="flex items-center space-x-2">
                    <div class="flex items-center">
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                    </div>
                    <span class="text-gray-600">(4.8/5)</span>
                  </div>
                </div>
              </div>
              <p class="text-gray-700 mb-4">
                Leading provider of 100% renewable energy in Texas. Excellent customer service, competitive rates, and strong environmental commitment make them our top choice.
              </p>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <span class="text-sm text-gray-600">Customer Satisfaction:</span>
                  <div class="font-bold text-green-600">96%</div>
                </div>
                <div>
                  <span class="text-sm text-gray-600">Plans Available:</span>
                  <div class="font-bold">15+</div>
                </div>
                <div>
                  <span class="text-sm text-gray-600">Lowest Rate:</span>
                  <div class="font-bold text-green-600">8.9¢/kWh</div>
                </div>
                <div>
                  <span class="text-sm text-gray-600">Green Energy:</span>
                  <div class="font-bold text-green-600">100%</div>
                </div>
              </div>
            </div>
            <div class="text-center lg:text-right">
              <div class="mb-4">
                <div class="text-4xl font-bold text-gray-900 mb-2">A+</div>
                <div class="text-sm text-gray-600">Overall Rating</div>
              </div>
              <button class="bg-green-600 text-white px-8 py-3 rounded-lg hover:bg-green-700 transition-colors">
                View Plans
              </button>
            </div>
          </div>
        </div>

        <!-- #2 Provider -->
        <div class="bg-white border-2 border-gray-200 rounded-xl p-8 hover:shadow-lg transition-shadow relative">
          <div class="absolute -top-4 left-8">
            <div class="bg-gray-600 text-white px-4 py-2 rounded-full font-bold text-lg">#2</div>
          </div>
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mt-4">
            <div class="lg:col-span-2">
              <div class="flex items-center space-x-4 mb-4">
                <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center">
                  <Zap class="h-8 w-8 text-blue-600" />
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900">TXU Energy</h3>
                  <div class="flex items-center space-x-2">
                    <div class="flex items-center">
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                      <Star class="h-5 w-5 text-yellow-400 fill-current" />
                    </div>
                    <span class="text-gray-600">(4.5/5)</span>
                  </div>
                </div>
              </div>
              <p class="text-gray-700 mb-4">
                Texas's largest electricity provider with extensive plan options and innovative features like free nights and weekends. Strong customer support and reliable service.
              </p>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <span class="text-sm text-gray-600">Customer Satisfaction:</span>
                  <div class="font-bold text-blue-600">92%</div>
                </div>
                <div>
                  <span class="text-sm text-gray-600">Plans Available:</span>
                  <div class="font-bold">25+</div>
                </div>
                <div>
                  <span class="text-sm text-gray-600">Lowest Rate:</span>
                  <div class="font-bold text-green-600">9.2¢/kWh</div>
                </div>
                <div>
                  <span class="text-sm text-gray-600">Special Features:</span>
                  <div class="font-bold">Free Nights</div>
                </div>
              </div>
            </div>
            <div class="text-center lg:text-right">
              <div class="mb-4">
                <div class="text-4xl font-bold text-gray-900 mb-2">A</div>
                <div class="text-sm text-gray-600">Overall Rating</div>
              </div>
              <button class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors">
                View Plans
              </button>
            </div>
          </div>
        </div>

        <!-- Continue with providers 3-5 in similar format... -->
        
      </div>

      <!-- Rating Methodology -->
      <div class="mt-16 bg-gray-50 rounded-xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Our Rating Methodology</h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
              <Users class="h-8 w-8 text-blue-600" />
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Customer Reviews</h4>
            <p class="text-sm text-gray-600">30% weight based on verified customer feedback and complaint ratios</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mx-auto mb-4">
              <TrendingUp class="h-8 w-8 text-green-600" />
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Rate Competitiveness</h4>
            <p class="text-sm text-gray-600">25% weight analyzing rates across different usage levels</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 rounded-xl flex items-center justify-center mx-auto mb-4">
              <Shield class="h-8 w-8 text-purple-600" />
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Plan Features</h4>
            <p class="text-sm text-gray-600">25% weight for plan variety, flexibility, and special features</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-orange-100 rounded-xl flex items-center justify-center mx-auto mb-4">
              <Award class="h-8 w-8 text-orange-600" />
            </div>
            <h4 class="font-semibold text-gray-900 mb-2">Service Quality</h4>
            <p class="text-sm text-gray-600">20% weight including customer service and billing accuracy</p>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>