---
import Layout from '../../layouts/Layout.astro';
import HeroBackground from '../../components/HeroBackground.astro';
import StandardZipInput from '../../components/StandardZipInput.astro';
import { Calculator, Clock, Zap, Leaf, DollarSign, Shield, Star } from 'lucide-react';
import EnhancedSection from '../../components/ui/EnhancedSection.astro';
import EnhancedCard from '../../components/ui/EnhancedCard.astro';
import EnhancedList from '../../components/ui/EnhancedList.astro';
import AccentBox from '../../components/ui/AccentBox.astro';

const title = "Compare Texas Electricity Plans - Real Costs & Side-by-Side Analysis";
const description = "Compare electricity plans with actual monthly costs, not teaser rates. Side-by-side analysis of 300+ Texas plans to find the best deal for your home.";
---

<Layout title={title} description={description}>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Compare Texas Electricity Plans",
    "description": "Compare 300+ Texas electricity plans with detailed cost analysis and savings calculator.",
    "url": "https://choosemypower.org/compare/plans"
  }
  </script>

  <div class="bg-white">
    <!-- Elegant Hero Section -->
    <section class="bg-gradient-to-br from-texas-navy via-blue-800 to-texas-navy">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg mb-6">
          <Calculator class="h-8 w-8 text-white" />
        </div>
        
        <div class="space-y-6">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight max-w-4xl mx-auto">
            Compare Texas Electricity Plans <span class="text-texas-gold">Side-by-Side</span>
          </h1>
          
          <p class="text-lg md:text-xl text-white/90 font-normal max-w-3xl mx-auto leading-relaxed">
            See actual monthly costs for <strong class="text-texas-red">300+ Texas plans.</strong> 
            <span class="text-white font-bold">No teaser rates, just real pricing</span> to help you make the right choice.
          </p>
          
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 max-w-2xl mx-auto border border-white/20 shadow-xl">
            <p class="text-sm text-white/90 font-normal">
              <span class="text-texas-gold font-medium">Real plan comparison</span> with honest monthly costs.
            </p>
          </div>
        </div>

        <div class="max-w-md mx-auto mt-8">
          <StandardZipInput 
            variant="hero"
            size="md"
            showTitle={false}
            showDescription={false}
          />
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- Elegant Usage Calculator -->
      <div class="mb-12 bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-xl p-6 lg:p-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Calculate Your Monthly Costs</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Monthly Usage (kWh)</label>
            <input type="number" value="1000" class="w-full border border-gray-300 rounded-md px-3 py-2" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Plan Type</label>
            <select class="w-full border border-gray-300 rounded-md px-3 py-2">
              <option>All Plan Types</option>
              <option>Fixed Rate</option>
              <option>Variable Rate</option>
              <option>Time of Use</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Contract Length</label>
            <select class="w-full border border-gray-300 rounded-md px-3 py-2">
              <option>Any Length</option>
              <option>Month-to-month</option>
              <option>12 months</option>
              <option>24+ months</option>
            </select>
          </div>
          <div class="flex items-end">
            <button class="w-full bg-texas-navy text-white px-6 py-3 min-h-[48px] rounded-lg hover:bg-texas-navy/90 transition-colors touch-manipulation"
              Update Costs
            </button>
          </div>
        </div>
      </div>

      <!-- Elegant Filters -->
      <div class="mb-12">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Filter Plans</h3>
        <div class="bg-white border border-gray-200 rounded-lg p-6">
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
              <label class="flex items-center space-x-3 cursor-pointer p-2 min-h-[48px] touch-manipulation">
                <input type="checkbox" class="w-5 h-5 text-texas-navy rounded touch-manipulation" />
                <span class="text-sm">No Deposit Required</span>
              </label>
            </div>
            <div>
              <label class="flex items-center space-x-3 cursor-pointer p-2 min-h-[48px] touch-manipulation">
                <input type="checkbox" class="w-5 h-5 text-texas-navy rounded touch-manipulation" />
                <span class="text-sm">100% Renewable</span>
              </label>
            </div>
            <div>
