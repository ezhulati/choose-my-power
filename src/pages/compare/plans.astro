      <!-- Detailed Comparison Table -->
      <div class="bg-white border border-gray-200 rounded-xl overflow-hidden mb-16">
        <div class="px-6 py-4 border-b border-gray-200 bg-texas-cream-100">
          <h3 class="text-lg font-semibold text-gray-900">Plan Comparison Table</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="text-left py-3 px-6 font-medium text-gray-900">Plan Name</th>
                <th class="text-left py-3 px-6 font-medium text-gray-900">Rate</th>
                <th class="text-left py-3 px-6 font-medium text-gray-900">Term</th>
                <th class="text-left py-3 px-6 font-medium text-gray-900">Monthly Cost</th>
                <th class="text-left py-3 px-6 font-medium text-gray-900">Green Energy</th>
                <th class="text-left py-3 px-6 font-medium text-gray-900">Special Features</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <tr class="hover:bg-texas-cream-100">
                <td class="py-4 px-6">
                  <div>
                    <div class="font-medium">Pollution Free e-Plus 12</div>
                    <div class="text-sm text-gray-600">Green Mountain Energy</div>
                  </div>
                </td>
                <td class="py-4 px-6 text-green-600 font-medium">8.9Â¢/kWh</td>
