---
import Layout from '../../layouts/Layout.astro';
import HeroBackground from '../../components/HeroBackground.astro';
import { ZipCodeSearch } from '../../components/ZipCodeSearch';
import { TrendingDown, TrendingUp, BarChart, Calendar, Calculator, DollarSign } from 'lucide-react';

const title = "Finally. Electricity Rate Comparison That Shows What You'll Actually Pay";
const description = "Tired of rate shopping that makes no sense? We add up all the fees and charges so you see your real monthly cost. No teaser rates. No fine print tricks.";
---

<Layout title={title} description={description}>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Compare Texas Electricity Rates",
    "description": "Real-time Texas electricity rate comparison with market trends and historical data.",
    "url": "https://choosemypower.org/compare/rates"
  }
  </script>

  <div class="bg-white">
    <!-- Hero Section -->
    <HeroBackground 
      title="Finally. Electricity Rates That Make Actual Sense" 
      subtitle="You'll see what you'll actually pay each month - not marketing tricks"
      variant="rates"
    >
      <div class="mt-8 max-w-md mx-auto">
        <ZipCodeSearch 
          client:load
          placeholder="Enter zip code"
          className="w-full"
        />
      </div>
    </HeroBackground>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- Current Market Overview -->
      <div class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">What's Actually Happening in Texas Today</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="bg-green-50 border border-green-200 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <TrendingDown class="h-6 w-6 text-green-600" />
              </div>
              <span class="text-green-600 text-sm font-medium">↓ 2.1%</span>
            </div>
            <div class="text-2xl font-bold text-gray-900">9.1¢</div>
            <div class="text-sm text-gray-600">Average Rate</div>
            <div class="text-xs text-gray-500 mt-1">per kWh (30 days)</div>
          </div>

          <div class="bg-texas-cream-200 border border-blue-200 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-texas-cream rounded-lg flex items-center justify-center">
                <DollarSign class="h-6 w-6 text-texas-navy" />
              </div>
              <span class="text-texas-navy text-sm font-medium">Best</span>
            </div>
            <div class="text-2xl font-bold text-gray-900">9.3¢</div>
            <div class="text-sm text-gray-600">Lowest Rate</div>
            <div class="text-xs text-gray-500 mt-1">Fixed 12-month</div>
          </div>

          <div class="bg-orange-50 border border-orange-200 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                <TrendingUp class="h-6 w-6 text-orange-600" />
              </div>
              <span class="text-orange-600 text-sm font-medium">↑ 1.8%</span>
            </div>
            <div class="text-2xl font-bold text-gray-900">15.2¢</div>
            <div class="text-sm text-gray-600">Highest Rate</div>
            <div class="text-xs text-gray-500 mt-1">Variable rate</div>
          </div>

          <div class="bg-purple-50 border border-purple-200 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <BarChart class="h-6 w-6 text-purple-600" />
              </div>
              <span class="text-purple-600 text-sm font-medium">Active</span>
            </div>
            <div class="text-2xl font-bold text-gray-900">347</div>
            <div class="text-sm text-gray-600">Total Plans</div>
            <div class="text-xs text-gray-500 mt-1">Statewide</div>
          </div>
        </div>
      </div>

      <!-- Rate Comparison Tool -->
      <div class="mb-12 bg-white border border-gray-200 rounded-xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Your Actual Monthly Cost Calculator</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Monthly Usage (kWh)</label>
            <input type="number" value="1000" class="w-full border border-gray-300 rounded-md px-3 py-2" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Rate Type</label>
            <select class="w-full border border-gray-300 rounded-md px-3 py-2">
              <option>Fixed Rate</option>
              <option>Variable Rate</option>
              <option>Indexed Rate</option>
              <option>Time of Use</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Contract Term</label>
            <select class="w-full border border-gray-300 rounded-md px-3 py-2">
              <option>12 months</option>
              <option>24 months</option>
              <option>36 months</option>
              <option>Month-to-month</option>
            </select>
          </div>
        </div>
        <button class="bg-texas-navy text-white px-8 py-3 rounded-lg hover:bg-blue-800 transition-colors">
          Calculate Savings
        </button>
      </div>

      <!-- Best Rates Table -->
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">What You'll Actually Pay Today (All Fees Included)</h3>
        <div class="bg-white border border-gray-200 rounded-xl overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                  <th class="text-left py-4 px-6 font-medium text-gray-900">Provider</th>
                  <th class="text-left py-4 px-6 font-medium text-gray-900">Plan Name</th>
                  <th class="text-left py-4 px-6 font-medium text-gray-900">Rate</th>
                  <th class="text-left py-4 px-6 font-medium text-gray-900">Term</th>
                  <th class="text-left py-4 px-6 font-medium text-gray-900">Monthly Cost*</th>
                  <th class="text-left py-4 px-6 font-medium text-gray-900">Trend</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <tr class="hover:bg-gray-50">
                  <td class="py-4 px-6 font-medium">4Change Energy</td>
                  <td class="py-4 px-6">Maxx Saver Select 12</td>
                  <td class="py-4 px-6">
                    <span class="text-2xl font-bold text-green-600">9.3¢</span>
                    <span class="text-gray-600">/kWh</span>
                  </td>
                  <td class="py-4 px-6">12 months</td>
                  <td class="py-4 px-6 font-medium">$78.95</td>
                  <td class="py-4 px-6">
                    <span class="flex items-center text-green-600">
                      <TrendingDown class="h-4 w-4 mr-1" />
                      -0.3¢
                    </span>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50">
                  <td class="py-4 px-6 font-medium">Discount Power</td>
                  <td class="py-4 px-6">Bill Credit Plus 12</td>
                  <td class="py-4 px-6">
                    <span class="text-2xl font-bold text-green-600">9.5¢</span>
                    <span class="text-gray-600">/kWh</span>
                  </td>
                  <td class="py-4 px-6">12 months</td>
                  <td class="py-4 px-6 font-medium">$81.95</td>
                  <td class="py-4 px-6">
                    <span class="flex items-center text-gray-600">
                      <BarChart class="h-4 w-4 mr-1" />
                      --
                    </span>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50">
                  <td class="py-4 px-6 font-medium">Express Energy</td>
                  <td class="py-4 px-6">Flash 12</td>
                  <td class="py-4 px-6">
                    <span class="text-2xl font-bold text-green-600">9.7¢</span>
                    <span class="text-gray-600">/kWh</span>
                  </td>
                  <td class="py-4 px-6">12 months</td>
                  <td class="py-4 px-6 font-medium">$83.95</td>
                  <td class="py-4 px-6">
                    <span class="flex items-center text-texas-red">
                      <TrendingUp class="h-4 w-4 mr-1" />
                      +0.2¢
                    </span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="px-6 py-3 bg-gray-50 text-sm text-gray-600">
            *Based on 1,000 kWh usage. Rates updated daily.
          </div>
        </div>
      </div>

      <!-- Rate History Chart -->
      <div class="mb-12 bg-white border border-gray-200 rounded-xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Rate Trends (Last 12 Months)</h3>
        <div class="h-64 bg-gray-50 rounded-lg flex items-center justify-center">
          <div class="text-center">
            <BarChart class="h-12 w-12 text-gray-400 mx-auto mb-2" />
            <p class="text-gray-600">Interactive rate history chart</p>
            <p class="text-sm text-gray-500">Shows average rates over time</p>
          </div>
        </div>
      </div>

      <!-- Understanding Rates -->
      <div class="bg-texas-cream-200 rounded-xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Why This Stuff Changes Every Day (And What You Can Control)</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h4 class="font-semibold text-gray-900 mb-3">Why Rates Go Up and Down</h4>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start space-x-2">
                <div class="w-2 h-2 bg-texas-navy rounded-full mt-2 flex-shrink-0"></div>
                <span>Natural gas prices (primary fuel for Texas electricity)</span>
              </li>
              <li class="flex items-start space-x-2">
                <div class="w-2 h-2 bg-texas-navy rounded-full mt-2 flex-shrink-0"></div>
                <span>Weather and seasonal demand</span>
              </li>
              <li class="flex items-start space-x-2">
                <div class="w-2 h-2 bg-texas-navy rounded-full mt-2 flex-shrink-0"></div>
                <span>Grid infrastructure and transmission costs</span>
              </li>
              <li class="flex items-start space-x-2">
                <div class="w-2 h-2 bg-texas-navy rounded-full mt-2 flex-shrink-0"></div>
                <span>Provider marketing and operational costs</span>
              </li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-gray-900 mb-3">How to Actually Save Money</h4>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start space-x-2">
                <div class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></div>
                <span>Compare total monthly costs, not just rates</span>
              </li>
              <li class="flex items-start space-x-2">
                <div class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></div>
                <span>Consider contract length and early termination fees</span>
              </li>
              <li class="flex items-start space-x-2">
                <div class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></div>
                <span>Read the Electricity Facts Label (EFL) carefully</span>
              </li>
              <li class="flex items-start space-x-2">
                <div class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></div>
                <span>Watch for promotional rates that increase after intro period</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>