---
import Layout from '../layouts/Layout.astro';
import { ZipCodeSearch } from '../components/ZipCodeSearch';
import { Zap, Shield, DollarSign, Clock, MapPin, Calculator, Leaf, Users, TrendingDown, Battery, Award, BarChart } from 'lucide-react';

const title = "Compare & Choose Texas Electricity | ChooseMyPower.org";
const description = "Expert analysis of 50+ providers and 300+ plans. Find the perfect match for your needs and save hundreds per year.";
---

<Layout title={title} description={description}>
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">
            Compare & Choose Texas Electricity
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto">
            Expert analysis of 50+ providers and 300+ plans. Find the perfect match for your needs and save hundreds per year.
          </p>
          
          <div class="max-w-md mx-auto mb-8">
            <ZipCodeSearch 
              client:load
              onSearch={(zipCode) => {
                // ZIP code routing logic - will be handled client-side
                if (zipCode.startsWith('77') || zipCode.startsWith('75') || zipCode.startsWith('78') || zipCode.startsWith('76') || zipCode.startsWith('79')) {
                  window.location.href = `/texas/${zipCode}`;
                } else if (zipCode.startsWith('19') || zipCode.startsWith('15') || zipCode.startsWith('18') || zipCode.startsWith('16')) {
                  window.location.href = '/pennsylvania/electricity-providers';
                } else {
                  window.location.href = '/locations';
                }
              }}
              placeholder="Enter your ZIP code"
              size="lg"
            />
          </div>

          <div class="text-blue-200">
            <p class="text-lg">50+ Expert-Ranked Providers • 6 Specializations • Free Comparison Tools</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Key Benefits -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Expert Analysis & Category Rankings
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            We analyze providers by specialization to help you find exactly what you need
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center p-6">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Leaf className="w-8 h-8 text-green-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Green Energy Leaders</h3>
            <p class="text-gray-600">100% renewable specialists with competitive green rates</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Users className="w-8 h-8 text-blue-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Service Champions</h3>
            <p class="text-gray-600">Top-rated customer service and satisfaction leaders</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <TrendingDown className="w-8 h-8 text-purple-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Best Value</h3>
            <p class="text-gray-600">Lowest total costs with competitive rates and minimal fees</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Battery className="w-8 h-8 text-red-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Smart Plans</h3>
            <p class="text-gray-600">Advanced features like time-of-use rates and smart home integration</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Actions -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Find Your Perfect Plan
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Multiple ways to discover electricity plans tailored to your priorities
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <a href="/texas" class="bg-white rounded-lg shadow-sm border hover:shadow-md transition-shadow p-8 text-center group">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <MapPin className="w-8 h-8 text-blue-600" />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Browse by Location</h3>
            <p class="text-gray-600 mb-6">Find providers and plans available in your specific city or region</p>
            <span class="text-blue-600 font-semibold group-hover:text-blue-800">Explore Locations →</span>
          </a>

          <a href="/compare" class="bg-white rounded-lg shadow-sm border hover:shadow-md transition-shadow p-8 text-center group">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <BarChart className="w-8 h-8 text-green-600" />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Compare Plans</h3>
            <p class="text-gray-600 mb-6">Side-by-side comparison of rates, features, and customer reviews</p>
            <span class="text-green-600 font-semibold group-hover:text-green-800">Compare Now →</span>
          </a>

          <a href="/rates/calculator" class="bg-white rounded-lg shadow-sm border hover:shadow-md transition-shadow p-8 text-center group">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <Calculator className="w-8 h-8 text-purple-600" />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Calculate Costs</h3>
            <p class="text-gray-600 mb-6">Estimate your monthly bill based on your actual usage patterns</p>
            <span class="text-purple-600 font-semibold group-hover:text-purple-800">Calculate Bills →</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Providers Preview -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Top-Rated Electricity Providers
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Customer-favorite providers with excellent service and competitive rates
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">TXU Energy</h3>
              <div class="flex items-center">
                <Award className="w-5 h-5 text-yellow-500 mr-1" />
                <span class="text-yellow-600 font-semibold">4.2★</span>
              </div>
            </div>
            <p class="text-gray-600 mb-4">Texas's largest provider with flexible plans and smart home features</p>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">From 12¢/kWh</span>
              <span class="text-blue-600 font-semibold">View Plans →</span>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">Reliant Energy</h3>
              <div class="flex items-center">
                <Award className="w-5 h-5 text-yellow-500 mr-1" />
                <span class="text-yellow-600 font-semibold">4.1★</span>
              </div>
            </div>
            <p class="text-gray-600 mb-4">Trusted brand with green energy options and bill protection plans</p>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">From 11¢/kWh</span>
              <span class="text-blue-600 font-semibold">View Plans →</span>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">Direct Energy</h3>
              <div class="flex items-center">
                <Award className="w-5 h-5 text-yellow-500 mr-1" />
                <span class="text-yellow-600 font-semibold">4.0★</span>
              </div>
            </div>
            <p class="text-gray-600 mb-4">Competitive rates with excellent customer service and online tools</p>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">From 13¢/kWh</span>
              <span class="text-blue-600 font-semibold">View Plans →</span>
            </div>
          </div>
        </div>

        <div class="text-center">
          <a href="/providers" class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium">
            View All 50+ Providers
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>