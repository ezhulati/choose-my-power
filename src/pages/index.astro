---
import Layout from '../layouts/Layout.astro';
import HeroBackground from '../components/HeroBackground.astro';
import { ZipCodeSearch } from '../components/ZipCodeSearch';
import { Zap, Shield, DollarSign, Clock, MapPin, Calculator, Leaf, Users, TrendingDown, Battery, Award, BarChart } from 'lucide-react';
import { getHeroImage } from '../lib/images/hero-image-mapper';

const title = "Compare & Choose Texas Electricity | ChooseMyPower.org";
const description = "Expert analysis of 50+ providers and 300+ plans. Find the perfect match for your needs and save hundreds per year.";

// Get the hero background image for homepage
const heroImage = getHeroImage({ pageType: 'homepage' });
console.log('üè† Homepage Hero Image:', heroImage);
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/homepage_hero_clean_16x9.png">
  <!-- Preload critical hero image for better LCP -->
  {heroImage && <link rel="preload" as="image" href={heroImage} />}
  <!-- Organization and Website Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": ["Organization", "WebSite"],
    "name": "ChooseMyPower.org",
    "description": "Expert analysis of 50+ electricity providers and 300+ plans in Texas. Find the perfect match for your needs and save hundreds per year.",
    "url": "https://choosemypower.org",
    "logo": "https://choosemypower.org/images/og-default.jpg",
    "sameAs": [
      "https://twitter.com/choosemypower"
    ],
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "areaServed": "Texas, US"
    },
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://choosemypower.org/texas/{search_term_string}",
      "query-input": "required name=search_term_string"
    },
    "serviceArea": {
      "@type": "State",
      "name": "Texas"
    }
  }
  </script>

  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <HeroBackground 
      imageUrl={heroImage}
      overlayOpacity={0.75}
    >
      <section class="text-white flex items-center justify-center min-h-[40vh] lg:min-h-[50vh]">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div class="text-center">
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-8 drop-shadow-lg">
              Compare & Choose Texas Electricity
            </h1>
            <p class="text-xl lg:text-2xl mb-10 text-blue-100 max-w-4xl mx-auto drop-shadow-md leading-relaxed">
              Expert analysis of 50+ providers and 300+ plans. Find the perfect match for your needs and save hundreds per year.
            </p>
          
          <div class="max-w-md mx-auto mb-8">
            <!-- Simple HTML form for now to test -->
            <form id="zipForm" class="w-full max-w-md mx-auto">
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <input
                  type="text"
                  id="zipInput"
                  maxlength="5"
                  placeholder="Enter your ZIP code"
                  class="block w-full pl-10 pr-12 h-14 text-lg border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-gray-900 bg-white placeholder-gray-500"
                />
                <button
                  type="submit"
                  aria-label="Search electricity plans by ZIP code"
                  class="absolute inset-y-0 right-0 px-4 flex items-center bg-red-600 text-white rounded-r-lg hover:bg-red-700 transition-colors"
                >
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </button>
              </div>
            </form>
          </div>

          <script>
            document.getElementById('zipForm').addEventListener('submit', function(e) {
              e.preventDefault();
              const zipCode = document.getElementById('zipInput').value;
              console.log('ZIP code entered:', zipCode);
              
              if (zipCode.length !== 5) {
                alert('Please enter a 5-digit ZIP code');
                return;
              }

              // Define ZIP to city mapping
              const zipToCity = {
                // Houston area
                '77001': 'houston-tx', '77002': 'houston-tx', '77003': 'houston-tx', '77004': 'houston-tx',
                '77005': 'houston-tx', '77006': 'houston-tx', '77007': 'houston-tx', '77008': 'houston-tx',
                // Dallas area
                '75001': 'dallas-tx', '75201': 'dallas-tx', '75202': 'dallas-tx', '75203': 'dallas-tx',
                '75204': 'dallas-tx', '75205': 'dallas-tx', '75206': 'dallas-tx', '75207': 'dallas-tx',
                // Austin area  
                '78701': 'austin-tx', '78702': 'austin-tx', '78703': 'austin-tx', '78704': 'austin-tx'
              };

              // Try to find the city for this ZIP code
              const city = zipToCity[zipCode];
              console.log('City lookup result:', city);
              
              if (city) {
                console.log('Navigating to city page:', `/texas/${city}`);
                window.location.href = `/texas/${city}`;
              } else {
                console.log('ZIP code not found in mapping, checking pattern...');
                if (zipCode.startsWith('7')) {
                  console.log('Texas ZIP code detected, going to Texas providers page');
                  window.location.href = '/texas/electricity-providers';
                } else {
                  console.log('Unknown ZIP code, going to locations page');
                  window.location.href = '/locations';
                }
              }
            });

            // Only allow numeric input
            document.getElementById('zipInput').addEventListener('input', function(e) {
              e.target.value = e.target.value.replace(/\D/g, '').slice(0, 5);
            });
          </script>

            <div class="text-blue-200">
              <p class="text-lg drop-shadow-sm">50+ Expert-Ranked Providers ‚Ä¢ 6 Specializations ‚Ä¢ Free Comparison Tools</p>
            </div>
          </div>
        </div>
      </section>
    </HeroBackground>

    <!-- Key Benefits -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Expert Analysis & Category Rankings
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            We analyze providers by specialization to help you find exactly what you need
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center p-6">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Leaf className="w-8 h-8 text-green-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Green Energy Leaders</h3>
            <p class="text-gray-600">100% renewable specialists with competitive green rates</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Users className="w-8 h-8 text-blue-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Service Champions</h3>
            <p class="text-gray-600">Top-rated customer service and satisfaction leaders</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <TrendingDown className="w-8 h-8 text-purple-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Best Value</h3>
            <p class="text-gray-600">Lowest total costs with competitive rates and minimal fees</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <Battery className="w-8 h-8 text-red-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Smart Plans</h3>
            <p class="text-gray-600">Advanced features like time-of-use rates and smart home integration</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Actions -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Find Your Perfect Plan
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Multiple ways to discover electricity plans tailored to your priorities
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <a href="/texas" class="bg-white rounded-lg shadow-sm border hover:shadow-md transition-shadow p-8 text-center group">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <MapPin className="w-8 h-8 text-blue-600" />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Browse by Location</h3>
            <p class="text-gray-600 mb-6">Find providers and plans available in your specific city or region</p>
            <span class="text-blue-600 font-semibold group-hover:text-blue-800">Explore Locations ‚Üí</span>
          </a>

          <a href="/compare" class="bg-white rounded-lg shadow-sm border hover:shadow-md transition-shadow p-8 text-center group">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <BarChart className="w-8 h-8 text-green-600" />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Compare Plans</h3>
            <p class="text-gray-600 mb-6">Side-by-side comparison of rates, features, and customer reviews</p>
            <span class="text-green-700 font-semibold group-hover:text-green-900">Compare Now ‚Üí</span>
          </a>

          <a href="/rates/calculator" class="bg-white rounded-lg shadow-sm border hover:shadow-md transition-shadow p-8 text-center group">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <Calculator className="w-8 h-8 text-purple-600" />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Calculate Costs</h3>
            <p class="text-gray-600 mb-6">Estimate your monthly bill based on your actual usage patterns</p>
            <span class="text-purple-600 font-semibold group-hover:text-purple-800">Calculate Bills ‚Üí</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Providers Preview -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Top-Rated Electricity Providers
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Customer-favorite providers with excellent service and competitive rates
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">TXU Energy</h3>
              <div class="flex items-center">
                <Award className="w-5 h-5 text-yellow-500 mr-1" />
                <span class="text-yellow-700 font-semibold">4.2‚òÖ</span>
              </div>
            </div>
            <p class="text-gray-600 mb-4">Texas's largest provider with flexible plans and smart home features</p>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">From 12¬¢/kWh</span>
              <span class="text-blue-600 font-semibold">View Plans ‚Üí</span>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">Reliant Energy</h3>
              <div class="flex items-center">
                <Award className="w-5 h-5 text-yellow-500 mr-1" />
                <span class="text-yellow-700 font-semibold">4.1‚òÖ</span>
              </div>
            </div>
            <p class="text-gray-600 mb-4">Trusted brand with green energy options and bill protection plans</p>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">From 11¬¢/kWh</span>
              <span class="text-blue-600 font-semibold">View Plans ‚Üí</span>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">Direct Energy</h3>
              <div class="flex items-center">
                <Award className="w-5 h-5 text-yellow-500 mr-1" />
                <span class="text-yellow-700 font-semibold">4.0‚òÖ</span>
              </div>
            </div>
            <p class="text-gray-600 mb-4">Competitive rates with excellent customer service and online tools</p>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">From 13¬¢/kWh</span>
              <span class="text-blue-600 font-semibold">View Plans ‚Üí</span>
            </div>
          </div>
        </div>

        <div class="text-center">
          <a href="/providers" class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium">
            View All 50+ Providers
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>