---
import Layout from '../layouts/Layout.astro';
import StandardZipInput from '../components/StandardZipInput.astro';
import EnhancedSection from '../components/ui/EnhancedSection.astro';
import EnhancedCard from '../components/ui/EnhancedCard.astro';
import AccentBox from '../components/ui/AccentBox.astro';
import { Zap, Shield, DollarSign, Clock, MapPin, Calculator, Leaf, Users, TrendingDown, Battery, Award, BarChart, Star, ArrowRight } from 'lucide-react';
import { getCredibleMarketingText, DEFAULT_COUNTS, getRealTimeLowestRate } from '../lib/utils/dynamic-counts';
import { DynamicHeroMessaging } from '../components/DynamicHeroMessaging';

// Get the actual lowest rate available
const lowestRate = await getRealTimeLowestRate();

const title = "Compare Texas Electricity Plans & Find Your Best Rate | ChooseMyPower.org";
const description = `No more "${lowestRate}¢" rates that cost 14¢. No more 40-page contracts. Clear prices and straight answers from someone who's figured this out. Whether you're moving tomorrow or your rate just jumped, we'll get you sorted in 10 minutes.`;

// Homepage uses gradient background - no hero image needed
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/homepage_hero_clean_16x9.png">
  <!-- Font preloading handled in Layout.astro to avoid duplication -->
  <!-- Organization and Website Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": ["Organization", "WebSite"],
    "name": "ChooseMyPower.org",
    "description": `No more "${lowestRate}¢" rates that cost 14¢. No more 40-page contracts. Clear prices and straight answers from someone who's figured this out. Whether you're moving tomorrow or your rate just jumped, we'll get you sorted in 10 minutes.`,
    "url": "https://choosemypower.org",
    "logo": "https://choosemypower.org/images/og-default.jpg",
    "sameAs": [
      "https://twitter.com/choosemypower"
    ],
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "areaServed": "Texas, US"
    },
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://choosemypower.org/texas/{search_term_string}",
      "query-input": "required name=search_term_string"
    },
    "serviceArea": {
      "@type": "State",
      "name": "Texas"
    }
  }
  </script>

  <div class="bg-white">
    <!-- ENTERPRISE-GRADE HERO SECTION - Professional Texas Design -->
    <section class="relative min-h-[95vh] flex items-center justify-center bg-gradient-to-br from-texas-navy via-blue-900 to-texas-navy overflow-hidden">
      <!-- Advanced Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-r from-black/20 via-transparent to-black/20"></div>
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-texas-gold/8 rounded-full blur-3xl animate-pulse opacity-70"></div>
        <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-texas-red/8 rounded-full blur-3xl animate-pulse delay-1000 opacity-70"></div>
        <!-- Subtle pattern overlay -->
        <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.03"%3E%3Ccircle cx="30" cy="30" r="1"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-40"></div>
      </div>
      
      <!-- Content Container -->
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="space-y-4">
          <!-- Dynamic Temporal Headlines -->
          <DynamicHeroMessaging client:load />
          
          <!-- Enhanced ZIP Code Search -->
          <div class="space-y-8">
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20 max-w-2xl mx-auto">
              <StandardZipInput 
                variant="hero" 
                size="lg"
                showTitle={false}
                showDescription={false}
                showStats={false}
                customClass="transform hover:scale-[1.02] transition-all duration-300"
              />
            </div>
            
            <!-- Trust Signals - Professional Design -->
            <div class="flex flex-wrap items-center justify-center gap-6 text-center text-white/90 text-base max-w-3xl mx-auto">
              <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-texas-gold rounded-full"></div>
                <span class="font-medium">{DEFAULT_COUNTS.planText} from licensed companies</span>
              </div>
              <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-texas-gold rounded-full"></div>
                <span class="font-medium">Free & takes 10 minutes</span>
              </div>
              <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-texas-gold rounded-full"></div>
                <span class="font-medium">Real prices, no surprises</span>
              </div>
            </div>
          </div>
          
          <!-- Social Proof Indicator - Enhanced Design -->
          <div class="text-white/90 text-lg">
            <div class="bg-white/10 backdrop-blur-sm rounded-full px-8 py-4 inline-flex items-center gap-4 border border-white/20">
              <span class="flex -space-x-3">
                <div class="w-10 h-10 bg-gradient-to-br from-texas-gold to-texas-gold-600 rounded-full border-3 border-white shadow-lg"></div>
                <div class="w-10 h-10 bg-gradient-to-br from-texas-red to-texas-red-600 rounded-full border-3 border-white shadow-lg"></div>
                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full border-3 border-white shadow-lg"></div>
                <div class="w-10 h-10 bg-gradient-to-br from-texas-navy to-blue-800 rounded-full border-3 border-white shadow-lg flex items-center justify-center text-sm text-white font-bold">5K+</div>
              </span>
              <span class="font-medium">
                Join thousands of Texans who've already found better rates
              </span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator - Enhanced -->
      <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2">
        <div class="bg-white/10 backdrop-blur-sm rounded-full p-3 border border-white/20 animate-bounce">
          <svg class="w-6 h-6 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
        <div class="text-center mt-2">
          <span class="text-white/60 text-sm font-medium">Scroll to explore</span>
        </div>
      </div>
    </section>

    <!-- How It Works - Enhanced 3-Step Process -->
    <EnhancedSection background="cream" padding="xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-texas-navy mb-6 leading-tight">
          Texas Gives You Choice. We Handle the Homework.
        </h2>
        <p class="text-lg md:text-xl text-gray-700 max-w-3xl mx-auto leading-relaxed">
          <strong class="text-texas-red">{DEFAULT_COUNTS.providers} companies</strong> competing for your business. Real competition means better rates. The comparing part? <strong class="text-texas-navy">We already did that work.</strong>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <!-- Step 1 -->
        <EnhancedCard variant="elevated" padding="lg" className="text-center group hover:shadow-2xl transition-all duration-500">
          <div class="w-24 h-24 bg-gradient-to-br from-texas-red to-texas-red-600 rounded-full flex items-center justify-center mx-auto mb-6 shadow-xl group-hover:scale-110 transition-transform duration-300">
            <span class="text-3xl font-bold text-white">1</span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold text-texas-navy mb-6 text-center leading-tight">Enter Your ZIP</h3>
          <div class="w-16 h-1 bg-texas-red/30 mx-auto mb-6 rounded-full"></div>
          <p class="text-lg text-gray-700 leading-relaxed text-center">
            See which companies compete in your area. <span class="text-texas-gold font-semibold">(Most states get just one choice.)</span>
          </p>
        </EnhancedCard>

        <!-- Step 2 -->
        <EnhancedCard variant="elevated" padding="lg" className="text-center group hover:shadow-2xl transition-all duration-500">
          <div class="w-24 h-24 bg-gradient-to-br from-texas-gold to-texas-gold-600 rounded-full flex items-center justify-center mx-auto mb-6 shadow-xl group-hover:scale-110 transition-transform duration-300">
            <span class="text-3xl font-bold text-white">2</span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold text-texas-navy mb-6 text-center leading-tight">Skip the Spreadsheets</h3>
          <div class="w-16 h-1 bg-texas-gold/30 mx-auto mb-6 rounded-full"></div>
          <p class="text-lg text-gray-700 leading-relaxed text-center">
            We already calculated what each plan actually costs. <span class="text-texas-navy font-semibold">No fine print math required.</span>
          </p>
        </EnhancedCard>

        <!-- Step 3 -->
        <EnhancedCard variant="elevated" padding="lg" className="text-center group hover:shadow-2xl transition-all duration-500">
          <div class="w-24 h-24 bg-gradient-to-br from-texas-navy to-blue-800 rounded-full flex items-center justify-center mx-auto mb-6 shadow-xl group-hover:scale-110 transition-transform duration-300">
            <span class="text-3xl font-bold text-white">3</span>
          </div>
          <h3 class="text-2xl md:text-3xl font-bold text-texas-navy mb-6 text-center leading-tight">Pick Your Winner</h3>
          <div class="w-16 h-1 bg-texas-navy/30 mx-auto mb-6 rounded-full"></div>
          <p class="text-lg text-gray-700 leading-relaxed text-center">
            Choose from the best options. <span class="text-texas-gold font-semibold">Your freedom, your choice, your savings.</span>
          </p>
        </EnhancedCard>
      </div>

      <!-- Two-Column Critical Information -->
      <div class="mt-16 mb-12 bg-texas-gold/5 border border-texas-gold/20 rounded-2xl p-10">
        <div class="text-center mb-10">
          <h2 class="text-3xl md:text-4xl font-bold text-texas-navy mb-4">Critical Money-Saving Intel</h2>
          <p class="text-lg text-gray-700 max-w-2xl mx-auto">Two situations where most Texans accidentally overpay. Don't be one of them.</p>
        </div>
        <div class="grid md:grid-cols-2 gap-10">
          <!-- Column 1: Moving Advice -->
          <EnhancedCard variant="elevated" padding="lg">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-texas-gold/10 rounded-full flex items-center justify-center mx-auto mb-4 flex-shrink-0">
                <MapPin className="w-8 h-8 text-texas-gold" />
              </div>
              <h3 class="text-2xl font-bold text-texas-navy mb-2">Moving? Don't Transfer Your Old Plan</h3>
              <p class="text-base text-gray-700 leading-relaxed font-medium">
                Here's why transferring is usually a mistake:
              </p>
            </div>
            <ul class="space-y-4 mb-6 text-left">
              <li class="flex items-start text-base text-gray-700">
                <span class="w-2 h-2 bg-texas-gold rounded-full mt-3 mr-4 flex-shrink-0"></span>
                <span>Your current plan's price is based on your <strong class="text-texas-red">OLD home's usage</strong></span>
              </li>
              <li class="flex items-start text-base text-gray-700">
                <span class="w-2 h-2 bg-texas-gold rounded-full mt-3 mr-4 flex-shrink-0"></span>
                <span><strong class="text-texas-navy">'Fixed rate' is misleading</strong> - it's actually a formula that changes based on how much electricity you use</span>
              </li>
              <li class="flex items-start text-base text-gray-700">
                <span class="w-2 h-2 bg-texas-gold rounded-full mt-3 mr-4 flex-shrink-0"></span>
                <span>A plan that works for a 2-bedroom apartment will cost way more in a 4-bedroom house (or vice versa)</span>
              </li>
            </ul>
            <div class="bg-texas-gold/10 border border-texas-gold/30 rounded-lg p-4 text-center">
              <p class="text-base text-texas-navy leading-relaxed font-semibold">
                Let's find a plan that matches your <strong class="text-texas-navy">NEW home</strong> instead. Takes the same 10 minutes as transferring, saves you money.
              </p>
            </div>
          </EnhancedCard>
          
          <!-- Column 2: Contract Expiration Advice -->
          <EnhancedCard variant="elevated" padding="lg">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-texas-red/10 rounded-full flex items-center justify-center mx-auto mb-4 flex-shrink-0">
                <Clock className="w-8 h-8 text-texas-red" />
              </div>
              <h3 class="text-2xl font-bold text-texas-navy mb-2">Contract Expiring? Don't Go on Holdover</h3>
              <p class="text-base text-gray-700 leading-relaxed font-medium">
                If you're on a holdover rate, shop now:
              </p>
            </div>
            <ul class="space-y-4 mb-6 text-left">
              <li class="flex items-start text-base text-gray-700">
                <span class="w-2 h-2 bg-texas-red rounded-full mt-3 mr-4 flex-shrink-0"></span>
                <span><strong class="text-texas-red">Anything will be cheaper</strong> than the holdover rate you're on</span>
              </li>
              <li class="flex items-start text-base text-gray-700">
                <span class="w-2 h-2 bg-texas-red rounded-full mt-3 mr-4 flex-shrink-0"></span>
                <span>In Texas, you have <strong class="text-texas-navy">14 days before your contract expires</strong> to switch without penalty</span>
              </li>
              <li class="flex items-start text-base text-gray-700">
                <span class="w-2 h-2 bg-texas-red rounded-full mt-3 mr-4 flex-shrink-0"></span>
                <span>Shop for a new plan every time your contract expires - <strong class="text-texas-red">don't renew</strong></span>
              </li>
            </ul>
            <div class="bg-texas-red/10 border border-texas-red/30 rounded-lg p-4 text-center">
              <p class="text-base text-texas-navy leading-relaxed font-semibold">
                Best way to save: <strong class="text-texas-navy">shop every contract expiration.</strong> Never let your plan expire and go on holdover.
              </p>
            </div>
          </EnhancedCard>
        </div>
      </div>
    </EnhancedSection>

    <!-- Conversational Path Selector -->
    <EnhancedSection background="cream" padding="xl">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-texas-navy mb-6 leading-tight">
            Your Situation. Our Research.
          </h2>
          <p class="text-lg md:text-xl text-gray-700 max-w-3xl mx-auto leading-relaxed">
            Texas gives you choices other states don't get. The tedious part? <strong class="text-texas-red">Comparing them all.</strong> We skip straight to what matters for <strong class="text-texas-navy">your situation.</strong>
          </p>
        </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
        <!-- Moving -->
        <EnhancedCard variant="outlined" padding="lg" accentColor="red">
          <div class="flex items-start space-x-4 mb-4">
            <div class="w-14 h-14 bg-texas-red/5 rounded-2xl flex items-center justify-center flex-shrink-0">
              <MapPin className="w-7 h-7 text-texas-red" />
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-xl font-bold text-texas-navy mb-2 leading-tight">Moving to Texas?</h3>
              <div class="w-12 h-0.5 bg-texas-red/30 mb-3"></div>
            </div>
          </div>
          <p class="text-gray-700 text-sm leading-relaxed">
            Welcome to electricity freedom. Your new home needs a plan that matches <strong class="text-texas-navy">its actual usage</strong>, not your old one.
          </p>
        </EnhancedCard>

        <!-- High Bill -->
        <EnhancedCard variant="outlined" padding="lg" accentColor="gold">
          <div class="flex items-start space-x-4 mb-4">
            <div class="w-14 h-14 bg-texas-gold/5 rounded-2xl flex items-center justify-center flex-shrink-0">
              <DollarSign className="w-7 h-7 text-texas-gold" />
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-xl font-bold text-texas-navy mb-2 leading-tight">Bill Too High?</h3>
              <div class="w-12 h-0.5 bg-texas-gold/30 mb-3"></div>
            </div>
          </div>
          <p class="text-gray-700 text-sm leading-relaxed">
            That sinking feeling when you open the bill? Let's see what you <strong class="text-texas-gold">should actually be paying</strong>.
          </p>
        </EnhancedCard>

        <!-- Contract Ending -->
        <EnhancedCard variant="outlined" padding="lg" accentColor="navy">
          <div class="flex items-start space-x-4 mb-4">
            <div class="w-14 h-14 bg-texas-navy/5 rounded-2xl flex items-center justify-center flex-shrink-0">
              <Clock className="w-7 h-7 text-texas-navy" />
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-xl font-bold text-texas-navy mb-2 leading-tight">Contract Expiring?</h3>
              <div class="w-12 h-0.5 bg-texas-navy/30 mb-3"></div>
            </div>
          </div>
          <p class="text-gray-700 text-sm leading-relaxed">
            Got that renewal notice? Good timing. Let's find you something <strong class="text-texas-navy">better before auto-renewal</strong> hits.
          </p>
        </EnhancedCard>

        <!-- Need $0 Deposit -->
        <EnhancedCard variant="outlined" padding="lg" accentColor="gold">
          <div class="flex items-start space-x-4 mb-4">
            <div class="w-14 h-14 bg-texas-gold/5 rounded-2xl flex items-center justify-center flex-shrink-0">
              <Shield className="w-7 h-7 text-texas-gold" />
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-xl font-bold text-texas-navy mb-2 leading-tight">Need $0 Deposit?</h3>
              <div class="w-12 h-0.5 bg-texas-gold/30 mb-3"></div>
            </div>
          </div>
          <p class="text-gray-700 text-sm leading-relaxed">
            Why tie up money in deposits when you need it elsewhere? We'll find <strong class="text-texas-gold">options that work</strong> for you.
          </p>
        </EnhancedCard>
      </div>

        <!-- Central Call-to-Action - Enhanced -->
        <div class="text-center">
          <div class="bg-gradient-to-r from-texas-navy/5 via-texas-gold/5 to-texas-navy/5 rounded-3xl p-12 border border-texas-gold/20">
            <h3 class="text-3xl md:text-4xl font-bold text-texas-navy mb-6 leading-tight">Ready to Find Your Best Rate?</h3>
            <div class="w-24 h-1 bg-gradient-to-r from-texas-red via-texas-gold to-texas-navy mx-auto mb-6 rounded-full"></div>
            <p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto leading-relaxed">
              Whether you're moving, frustrated with high bills, or just want a better deal – it all starts with your ZIP code.
            </p>
            <div class="bg-white rounded-2xl p-6 shadow-lg max-w-lg mx-auto">
              <StandardZipInput 
                variant="inline" 
                size="lg"
                showTitle={false}
                showDescription={false}
                showStats={false}
                customClass="w-full"
              />
            </div>
          </div>
        </div>
    </EnhancedSection>

    <!-- Micro-Lessons Section -->
    <EnhancedSection background="white" padding="xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-texas-navy mb-6 leading-tight">
          Why Texas Electricity Is Different
        </h2>
        <p class="text-lg md:text-xl text-gray-700 max-w-3xl mx-auto leading-relaxed">
          Most states get stuck with one utility. <strong class="text-texas-gold">Texas gets choice.</strong> Here's why that matters and how it works.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- What's a kWh? -->
        <EnhancedCard variant="elevated" padding="lg" accentColor="red">
          <div class="flex items-center mb-6">
            <div class="w-14 h-14 bg-texas-red/10 rounded-full flex items-center justify-center mr-4">
              <Zap className="w-7 h-7 text-texas-red" />
            </div>
            <h3 class="text-2xl font-bold text-texas-navy">What's a kWh?</h3>
          </div>
          <p class="text-lg text-gray-700 leading-relaxed mb-6">
            <strong class="text-texas-navy">Here's the tricky part:</strong> Unlike gas where you pay $3.50/gallon no matter how much you buy, electricity plans use <strong class="text-texas-red">pricing formulas</strong> where your rate changes based on how much you use.
          </p>
          <div class="bg-texas-red/10 border border-texas-red/30 rounded-lg p-4">
            <p class="text-lg text-texas-navy leading-relaxed font-semibold">
              You're not buying a fixed price per kWh. <strong class="text-texas-navy">You're buying a formula</strong> that calculates your rate based on your total monthly usage.
            </p>
          </div>
        </EnhancedCard>

        <!-- Why do rates vary? -->
        <EnhancedCard variant="elevated" padding="lg" accentColor="gold">
          <div class="flex items-center mb-6">
            <div class="w-14 h-14 bg-texas-gold/10 rounded-full flex items-center justify-center mr-4">
              <TrendingDown className="w-7 h-7 text-texas-gold" />
            </div>
            <h3 class="text-2xl font-bold text-texas-navy">Why Do Rates Vary?</h3>
          </div>
          <p class="text-lg text-gray-700 leading-relaxed mb-6">
            <strong class="text-texas-gold">Competition.</strong> Electricity companies fight for your business. Same electricity, different prices. Unlike most states where you're stuck with one utility company, Texas deregulation means real choices.
          </p>
          <div class="bg-texas-gold/10 border border-texas-gold/30 rounded-lg p-4">
            <p class="text-lg text-texas-navy leading-relaxed font-semibold">
              The coffee's identical, but one shop charges more. <strong class="text-texas-navy">We find the ones that don't overcharge</strong> and actually deliver on their promises.
            </p>
          </div>
        </EnhancedCard>

        <!-- Fixed vs Variable? -->
        <EnhancedCard variant="elevated" padding="lg" accentColor="navy">
          <div class="flex items-center mb-6">
            <div class="w-14 h-14 bg-texas-navy/10 rounded-full flex items-center justify-center mr-4">
              <BarChart className="w-7 h-7 text-texas-navy" />
            </div>
            <h3 class="text-2xl font-bold text-texas-navy">Fixed vs Variable?</h3>
          </div>
          <p class="text-lg text-gray-700 leading-relaxed mb-6">
            <strong class="text-texas-navy">Fixed</strong> = your rate stays the same all year. <strong class="text-texas-red">Variable</strong> = your rate changes with the market. Most Texans prefer fixed rates for predictable budgeting, especially during hot summers.
          </p>
          <div class="bg-texas-navy/10 border border-texas-navy/30 rounded-lg p-4">
            <p class="text-lg text-texas-navy leading-relaxed font-semibold">
              Fixed is like <strong class="text-texas-navy">locking in gas prices.</strong> Variable is like paying whatever's on the pump. <strong class="text-texas-navy">We'll show you both options.</strong>
            </p>
          </div>
        </EnhancedCard>
      </div>
    </EnhancedSection>

    <!-- Social Proof & Trust Signals -->
    <EnhancedSection background="cream" padding="xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-texas-navy mb-6 leading-tight">
          We Only Show You the Good Ones
        </h2>
        <p class="text-lg md:text-xl text-gray-700 max-w-3xl mx-auto leading-relaxed">
          <strong class="text-texas-red">{DEFAULT_COUNTS.planText}</strong> from licensed electricity companies. <strong class="text-texas-navy">No fly-by-night companies.</strong> No door-to-door scammers.
        </p>
      </div>

