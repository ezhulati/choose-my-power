---
import Layout from '../layouts/Layout.astro';
import { Zap, Shield, DollarSign, Clock, MapPin, Calculator, Leaf, Users, TrendingDown, Battery, Award, BarChart, Star, ArrowRight } from 'lucide-react';
import { getCredibleMarketingText, DEFAULT_COUNTS } from '../lib/utils/dynamic-counts';

const title = "Compare & Choose Texas Electricity | ChooseMyPower.org";
const marketingText = getCredibleMarketingText(DEFAULT_COUNTS.providers, DEFAULT_COUNTS.plans);
const description = marketingText.seoDescription;

// Homepage uses gradient background - no hero image needed
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/homepage_hero_clean_16x9.png">
  <!-- Font preloading handled in Layout.astro to avoid duplication -->
  <!-- Organization and Website Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": ["Organization", "WebSite"],
    "name": "ChooseMyPower.org",
    "description": "{marketingText.seoDescription}",
    "url": "https://choosemypower.org",
    "logo": "https://choosemypower.org/images/og-default.jpg",
    "sameAs": [
      "https://twitter.com/choosemypower"
    ],
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "areaServed": "Texas, US"
    },
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://choosemypower.org/texas/{search_term_string}",
      "query-input": "required name=search_term_string"
    },
    "serviceArea": {
      "@type": "State",
      "name": "Texas"
    }
  }
  </script>

  <div class="bg-white">
    <!-- Enhanced Texas-Themed Hero Section -->
    <section class="relative bg-gradient-to-br from-texas-navy via-blue-800 to-texas-navy overflow-hidden">
      <!-- Background Pattern with Texas Energy Theme -->
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;80&quot; height=&quot;80&quot; viewBox=&quot;0 0 80 80&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;0.08&quot;%3E%3Cpath d=&quot;M20 20l20-20v40L20 20zm20 20l20-20v40L40 40z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
      
      <!-- Lightning Accent Elements -->
      <div class="absolute top-20 left-10 w-32 h-32 opacity-10">
        <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-texas-gold">
          <path d="M11 2L6 10h5v12l5-8h-5V2z"/>
        </svg>
      </div>
      <div class="absolute bottom-20 right-10 w-24 h-24 opacity-8">
        <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-texas-gold">
          <path d="M11 2L6 10h5v12l5-8h-5V2z"/>
        </svg>
      </div>
      
      <!-- Content Container -->
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="py-20 sm:py-24 lg:py-32">
          <div class="text-center">
            <!-- Main Heading with Texas Pride -->
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight tracking-tight">
              <span class="block">Compare & Choose</span>
              <span class="block bg-gradient-to-r from-texas-gold via-yellow-300 to-texas-gold bg-clip-text text-transparent">
                Texas Electricity
              </span>
            </h1>
            
            <!-- Enhanced Subheading -->
            <p class="text-lg sm:text-xl lg:text-2xl text-blue-100 max-w-4xl mx-auto mb-4 leading-relaxed">
              {marketingText.heroText}
            </p>
            
            <!-- Trust Indicators Above Search -->
            <div class="flex flex-wrap items-center justify-center gap-6 mb-10 text-blue-200">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-texas-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <span class="font-medium">Expert-Ranked</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-texas-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="font-medium">100% Free</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-texas-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                </svg>
                <span class="font-medium">Secure & Private</span>
              </div>
            </div>
            
            <!-- Enhanced ZIP Code Search -->
            <div class="max-w-xl mx-auto mb-12">
              <div class="mb-6">
                <h2 class="text-xl font-semibold text-white mb-2">Find Plans in Your Area</h2>
                <p class="text-blue-200 text-sm">Enter your ZIP code to see available electricity plans and rates</p>
              </div>
              
              <form id="zipForm" class="relative" action="/api/zip-lookup" method="GET">
                <div class="flex rounded-2xl shadow-2xl overflow-hidden bg-white ring-4 ring-white/10 backdrop-blur-sm">
                  <div class="flex-1 relative">
                    <div class="absolute inset-y-0 left-0 pl-6 flex items-center pointer-events-none">
                      <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    </div>
                    <input
                      type="text"
                      id="zipInput"
                      name="zip"
                      maxlength="5"
                      placeholder="Enter your ZIP code (e.g., 75201)"
                      class="w-full pl-14 pr-6 py-5 text-xl text-gray-900 placeholder-gray-500 border-0 focus:ring-0 focus:outline-none font-medium tracking-wider"
                      autocomplete="postal-code"
                      inputmode="numeric"
                      required
                    />
                  </div>
                  <button
                    type="submit"
                    aria-label="Search electricity plans by ZIP code"
                    class="px-10 py-5 bg-gradient-to-r from-texas-red to-texas-red-700 text-white font-bold hover:from-texas-red-600 hover:to-texas-red-800 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-texas-red-200 active:scale-95 group"
                  >
                    <div class="flex items-center gap-3">
                      <svg class="h-6 w-6 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                      </svg>
                      <span class="hidden sm:block">Find Plans</span>
                    </div>
                  </button>
                </div>
              </form>
              
              <!-- Live Stats Below Search -->
              <div class="mt-6 grid grid-cols-3 gap-4 text-center">
                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
                  <div class="text-2xl font-bold text-white">881</div>
                  <div class="text-xs text-blue-200">Texas Cities</div>
                </div>
                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
                  <div class="text-2xl font-bold text-white">{DEFAULT_COUNTS.providers}</div>
                  <div class="text-xs text-blue-200">Providers</div>
                </div>
                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
                  <div class="text-2xl font-bold text-white">{DEFAULT_COUNTS.plans}+</div>
                  <div class="text-xs text-blue-200">Plans</div>
                </div>
              </div>
            </div>

            <!-- Enhanced Call-to-Action -->
            <div class="text-center">
              <p class="text-blue-200 text-lg font-medium mb-4">
                Join thousands of Texans saving on electricity every month
              </p>
              <div class="flex flex-wrap items-center justify-center gap-8 text-blue-300">
                <div class="flex items-center gap-2">
                  <div class="w-2 h-2 bg-texas-gold rounded-full animate-pulse"></div>
                  <span class="text-sm">Real-time rate comparison</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="w-2 h-2 bg-texas-gold rounded-full animate-pulse"></div>
                  <span class="text-sm">No hidden fees or charges</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="w-2 h-2 bg-texas-gold rounded-full animate-pulse"></div>
                  <span class="text-sm">Expert analysis & ratings</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <!-- Load ZIP lookup functionality from external optimized file -->
      <script src="/js/zip-lookup.js" defer></script>
    </section>

    <!-- Enhanced Key Benefits with Texas Theme -->
    <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-texas-navy mb-6">
            Expert Analysis & Category Rankings
          </h2>
          <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
            We analyze providers by specialization to help you find exactly what you need. 
            Our expert rankings are based on rates, customer service, plan features, and value.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Green Energy Leaders -->
          <div class="group relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border-2 border-transparent hover:border-texas-gold-200">
            <div class="absolute inset-0 bg-gradient-to-br from-texas-gold-50 to-transparent rounded-2xl opacity-50"></div>
            <div class="relative">
              <div class="w-20 h-20 bg-gradient-to-br from-texas-gold-100 to-texas-gold-200 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
                <Leaf className="w-10 h-10 text-texas-gold" />
              </div>
              <h3 class="text-xl font-bold text-texas-navy mb-3 text-center">Green Energy Leaders</h3>
              <p class="text-gray-600 text-center leading-relaxed">100% renewable specialists with competitive green rates and environmental impact reporting</p>
              <div class="mt-4 text-center">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-texas-gold-100 text-texas-navy">
                  {DEFAULT_COUNTS.providerText.replace('trusted', 'Green')}
                </span>
              </div>
            </div>
          </div>

          <!-- Service Champions -->
          <div class="group relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border-2 border-transparent hover:border-texas-navy/20">
            <div class="absolute inset-0 bg-gradient-to-br from-texas-navy/5 to-transparent rounded-2xl opacity-50"></div>
            <div class="relative">
              <div class="w-20 h-20 bg-gradient-to-br from-texas-navy/10 to-texas-navy/20 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
                <Users className="w-10 h-10 text-texas-navy" />
              </div>
              <h3 class="text-xl font-bold text-texas-navy mb-3 text-center">Service Champions</h3>
              <p class="text-gray-600 text-center leading-relaxed">Top-rated customer service and satisfaction leaders with 24/7 support and quick resolution</p>
              <div class="mt-4 text-center">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-texas-navy/10 text-texas-navy">
                  Top Service Providers
                </span>
              </div>
            </div>
          </div>

          <!-- Best Value -->
          <div class="group relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border-2 border-transparent hover:border-texas-gold/50">
            <div class="absolute inset-0 bg-gradient-to-br from-texas-gold/10 to-transparent rounded-2xl opacity-50"></div>
            <div class="relative">
              <div class="w-20 h-20 bg-gradient-to-br from-texas-gold/20 to-texas-gold/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
                <TrendingDown className="w-10 h-10 text-texas-gold" />
              </div>
              <h3 class="text-xl font-bold text-texas-navy mb-3 text-center">Best Value</h3>
              <p class="text-gray-600 text-center leading-relaxed">Lowest total costs with competitive rates, minimal fees, and transparent pricing structures</p>
              <div class="mt-4 text-center">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-texas-gold-100 text-texas-navy">
                  Best Value Options
                </span>
              </div>
            </div>
          </div>

          <!-- Smart Plans -->
          <div class="group relative bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border-2 border-transparent hover:border-texas-red/30">
            <div class="absolute inset-0 bg-gradient-to-br from-texas-red/10 to-transparent rounded-2xl opacity-50"></div>
            <div class="relative">
              <div class="w-20 h-20 bg-gradient-to-br from-texas-red/20 to-texas-red/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
                <Battery className="w-10 h-10 text-texas-red" />
              </div>
              <h3 class="text-xl font-bold text-texas-navy mb-3 text-center">Smart Plans</h3>
              <p class="text-gray-600 text-center leading-relaxed">Advanced features like time-of-use rates, smart home integration, and usage analytics</p>
              <div class="mt-4 text-center">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-texas-red-100 text-texas-navy">
                  8+ Providers
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Call to Action Below Benefits -->
        <div class="mt-12 text-center">
          <p class="text-lg text-gray-600 mb-6">Ready to find your perfect electricity plan?</p>
          <a href="/compare" class="inline-flex items-center gap-2 bg-gradient-to-r from-texas-navy to-blue-800 text-white px-8 py-4 rounded-xl font-semibold hover:from-texas-navy/90 hover:to-blue-800/90 transition-all duration-300 shadow-lg hover:shadow-xl">
            <BarChart className="w-5 h-5" />
            Compare All Plans
          </a>
        </div>
      </div>
    </section>

    <!-- Enhanced Quick Actions with Texas Branding -->
    <section class="py-20 bg-gradient-to-b from-texas-cream/30 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-texas-navy mb-6">
            Find Your Perfect Plan
          </h2>
          <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
            Multiple pathways to discover electricity plans tailored to your unique needs and priorities.
            Start your energy savings journey today.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Browse by Location -->
          <div class="group relative">
            <div class="absolute inset-0 bg-gradient-to-br from-texas-navy/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <a href="/texas" class="relative block bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 text-center border-2 border-transparent group-hover:border-texas-navy/20 transform group-hover:-translate-y-1">
              <div class="w-20 h-20 bg-gradient-to-br from-texas-navy/10 to-texas-navy/20 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <MapPin className="w-10 h-10 text-texas-navy" />
              </div>
              <h3 class="text-2xl font-bold text-texas-navy mb-4">Browse by Location</h3>
              <p class="text-gray-600 mb-6 leading-relaxed">
                Discover providers and plans available in your specific Texas city or region. 
                Get local market insights and city-specific recommendations.
              </p>
              <div class="flex items-center justify-center gap-2 text-texas-navy font-semibold group-hover:text-texas-navy/80 transition-colors">
                <span>Explore 881 Cities</span>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
              
              <!-- Location Stats -->
              <div class="mt-6 grid grid-cols-2 gap-4 pt-6 border-t border-gray-100">
                <div class="text-center">
                  <div class="text-lg font-bold text-texas-navy">4</div>
                  <div class="text-xs text-gray-500 uppercase tracking-wide">Major Regions</div>
                </div>
                <div class="text-center">
                  <div class="text-lg font-bold text-texas-navy">881</div>
                  <div class="text-xs text-gray-500 uppercase tracking-wide">Cities Covered</div>
                </div>
              </div>
            </a>
          </div>

          <!-- Compare Plans -->
          <div class="group relative">
            <div class="absolute inset-0 bg-gradient-to-br from-texas-gold/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <a href="/electricity-plans" class="relative block bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 text-center border-2 border-transparent group-hover:border-texas-gold/30 transform group-hover:-translate-y-1">
              <div class="w-20 h-20 bg-gradient-to-br from-texas-gold/20 to-texas-gold/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <BarChart className="w-10 h-10 text-texas-gold" />
              </div>
              <h3 class="text-2xl font-bold text-texas-navy mb-4">Compare Plans</h3>
              <p class="text-gray-600 mb-6 leading-relaxed">
                Advanced side-by-side comparison of electricity rates, contract terms, features, 
                and verified customer reviews from real Texas residents.
              </p>
              <div class="flex items-center justify-center gap-2 text-texas-navy font-semibold group-hover:text-texas-navy/80 transition-colors">
                <span>Compare All Plans</span>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
              
              <!-- Comparison Stats -->
              <div class="mt-6 grid grid-cols-2 gap-4 pt-6 border-t border-gray-100">
                <div class="text-center">
                  <div class="text-lg font-bold text-texas-navy">{DEFAULT_COUNTS.plans}+</div>
                  <div class="text-xs text-gray-500 uppercase tracking-wide">Active Plans</div>
                </div>
                <div class="text-center">
                  <div class="text-lg font-bold text-texas-navy">{DEFAULT_COUNTS.providers}</div>
                  <div class="text-xs text-gray-500 uppercase tracking-wide">Providers</div>
                </div>
              </div>
            </a>
          </div>

          <!-- Calculate Costs -->
          <div class="group relative">
            <div class="absolute inset-0 bg-gradient-to-br from-texas-red/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <a href="/rates/calculator" class="relative block bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 text-center border-2 border-transparent group-hover:border-texas-red/30 transform group-hover:-translate-y-1">
              <div class="w-20 h-20 bg-gradient-to-br from-texas-red/20 to-texas-red/30 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <Calculator className="w-10 h-10 text-texas-red" />
              </div>
              <h3 class="text-2xl font-bold text-texas-navy mb-4">Calculate Costs</h3>
              <p class="text-gray-600 mb-6 leading-relaxed">
                Smart bill calculator that estimates your monthly costs based on actual usage patterns,
                seasonal variations, and Texas climate considerations.
              </p>
              <div class="flex items-center justify-center gap-2 text-texas-red font-semibold group-hover:text-texas-red/80 transition-colors">
                <span>Calculate Savings</span>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
              
              <!-- Calculator Stats -->
              <div class="mt-6 grid grid-cols-2 gap-4 pt-6 border-t border-gray-100">
                <div class="text-center">
                  <div class="text-lg font-bold text-texas-red">$400</div>
                  <div class="text-xs text-gray-500 uppercase tracking-wide">Avg. Savings</div>
                </div>
                <div class="text-center">
                  <div class="text-lg font-bold text-texas-red">1M+</div>
                  <div class="text-xs text-gray-500 uppercase tracking-wide">Calculations</div>
                </div>
              </div>
            </a>
          </div>
        </div>

        <!-- Additional CTA Section -->
        <div class="mt-16 text-center">
          <div class="bg-gradient-to-r from-texas-navy to-blue-800 rounded-2xl p-8 text-white">
            <h3 class="text-2xl font-bold mb-4">Not sure where to start?</h3>
            <p class="text-blue-100 mb-6 max-w-2xl mx-auto">
              Our electricity experts have analyzed every major Texas provider to help you make the best decision.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
              <a href="/providers" class="bg-white text-texas-navy px-8 py-3 rounded-xl font-semibold hover:bg-texas-cream transition-colors inline-flex items-center gap-2">
                <Award className="w-5 h-5" />
                View Expert Rankings
              </a>
              <a href="/resources" class="border border-white/30 text-white px-8 py-3 rounded-xl font-semibold hover:bg-white/10 transition-colors inline-flex items-center gap-2">
                <Shield className="w-5 h-5" />
                Learning Center
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Enhanced Featured Providers with Professional Cards -->
    <section class="py-20 bg-white">
