---
import Layout from '../layouts/Layout.astro';
import StandardZipInput from '../components/StandardZipInput.astro';
import { Badge } from '../components/ui/badge';
import { Button } from '../components/ui/button';
import { Card, CardContent, CardHeader, CardTitle } from '../components/ui/card';
import { getCredibleMarketingText, DEFAULT_COUNTS, getRealTimeLowestRate } from '../lib/utils/dynamic-counts';

// Get the actual lowest rate available
const lowestRate = await getRealTimeLowestRate();

const title = "Compare Texas Electricity Plans & Find Your Best Rate | ChooseMyPower.org";
const description = `No more "${lowestRate}¢" rates that cost 14¢. No more 40-page contracts. Clear prices and straight answers from someone who's figured this out. Whether you're moving tomorrow or your rate just jumped, we'll get you sorted in 10 minutes.`;
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/homepage_hero_clean_16x9.png">
  <!-- Font preloading handled in Layout.astro to avoid duplication -->
  <!-- Organization and Website Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": ["Organization", "WebSite"],
    "name": "ChooseMyPower.org",
    "description": `No more "${lowestRate}¢" rates that cost 14¢. No more 40-page contracts. Clear prices and straight answers from someone who's figured this out. Whether you're moving tomorrow or your rate just jumped, we'll get you sorted in 10 minutes.`,
    "url": "https://choosemypower.org",
    "logo": "https://choosemypower.org/images/og-default.jpg",
    "sameAs": [
      "https://twitter.com/choosemypower"
    ],
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "areaServed": "Texas, US"
    },
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://choosemypower.org/texas/{search_term_string}",
      "query-input": "required name=search_term_string"
    },
    "serviceArea": {
      "@type": "State",
      "name": "Texas"
    }
  }
  </script>

  <main class="min-h-screen bg-gray-50">
    <!-- Professional Hero Section - Matching Electricity Plans Page -->
    <div class="relative bg-gradient-to-br from-texas-navy via-blue-800 to-texas-navy overflow-hidden">
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
        <div class="text-center text-white">
          <!-- Professional Badge -->
          <div class="inline-flex items-center px-6 py-3 mb-8 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full">
            <svg class="w-5 h-5 text-texas-gold mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <span class="font-semibold text-lg">Texas Electricity Choice</span>
          </div>
          
          <!-- Enhanced Typography with better hierarchy -->
          <div class="space-y-8 max-w-5xl mx-auto">
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
              Find Your Best Texas
              <span class="block text-texas-gold mt-2">Electricity Rate</span>
            </h1>
            
            <p class="text-2xl md:text-3xl text-white/90 font-light max-w-4xl mx-auto leading-relaxed">
              No more <span class="text-texas-red font-semibold">"{lowestRate}¢" rates that cost 14¢.</span> 
              <span class="text-white font-semibold">Clear prices.</span> 
              <span class="text-white/80">Straight answers.</span>
            </p>
            
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-lg">
              <div class="flex items-center px-4 py-2 bg-green-500/20 backdrop-blur-sm rounded-full border border-green-400/30">
                <svg class="w-5 h-5 text-green-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-green-100 font-medium">{DEFAULT_COUNTS.planText} from licensed companies</span>
              </div>
              <div class="flex items-center px-4 py-2 bg-texas-navy/100/20 backdrop-blur-sm rounded-full border border-blue-400/30">
                <svg class="w-5 h-5 text-blue-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
                <span class="text-white/90 font-medium">Free & takes 10 minutes</span>
              </div>
              <div class="flex items-center px-4 py-2 bg-texas-red/20 backdrop-blur-sm rounded-full border border-texas-red/30">
                <svg class="w-5 h-5 text-texas-red-200 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-red-100 font-medium">Real prices, no surprises</span>
              </div>
            </div>
          </div>

          <!-- Professional Search Input -->
          <div class="max-w-2xl mx-auto mt-12">
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
              <p class="text-xl font-semibold mb-6 text-white/90">Enter Your ZIP Code to Start</p>
              <StandardZipInput 
                variant="hero" 
                size="lg"
                showTitle={false}
                showDescription={false}
                showStats={false}
                customClass="max-w-lg mx-auto"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- How It Works Section -->
    <div class="bg-gradient-to-b from-texas-cream/20 to-white py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-5xl font-bold text-texas-navy mb-8 leading-tight">
            How ChooseMyPower Works
          </h2>
          <p class="text-2xl text-gray-700 max-w-4xl mx-auto leading-relaxed">
            <strong class="text-texas-red">{DEFAULT_COUNTS.providers} companies</strong> competing for your business. Real competition means better rates. The comparing part? <strong class="text-texas-navy">We already did that work.</strong>
          </p>
        </div>
        
        <div class="grid lg:grid-cols-3 gap-12 mb-20">
          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 text-center shadow-lg hover:shadow-2xl hover:border-texas-red transition-all duration-300 group">
            <div class="w-20 h-20 bg-gradient-to-br from-texas-red/10 to-texas-red/20 rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:from-texas-red/20 group-hover:to-texas-red/30 transition-all duration-300">
              <span class="text-3xl font-bold text-texas-red">1</span>
            </div>
            <h3 class="text-3xl font-bold text-texas-navy mb-6 group-hover:text-texas-red transition-colors">Enter Your ZIP</h3>
            <p class="text-xl text-gray-700 leading-relaxed">
              See which companies compete in your area. <strong class="text-texas-gold">(Most states get just one choice.)</strong>
            </p>
          </div>

          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 text-center shadow-lg hover:shadow-2xl hover:border-texas-gold transition-all duration-300 group">
            <div class="w-20 h-20 bg-gradient-to-br from-texas-gold/10 to-texas-gold/20 rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:from-texas-gold/20 group-hover:to-texas-gold/30 transition-all duration-300">
              <span class="text-3xl font-bold text-texas-gold">2</span>
            </div>
            <h3 class="text-3xl font-bold text-texas-navy mb-6 group-hover:text-texas-gold transition-colors">Skip the Spreadsheets</h3>
            <p class="text-xl text-gray-700 leading-relaxed">
              We already calculated what each plan actually costs. <strong class="text-texas-navy">No fine print math required.</strong>
            </p>
          </div>

          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 text-center shadow-lg hover:shadow-2xl hover:border-texas-navy transition-all duration-300 group">
            <div class="w-20 h-20 bg-gradient-to-br from-texas-navy/10 to-texas-navy/20 rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:from-texas-navy/20 group-hover:to-texas-navy/30 transition-all duration-300">
              <span class="text-3xl font-bold text-texas-navy">3</span>
            </div>
            <h3 class="text-3xl font-bold text-texas-navy mb-6 group-hover:text-texas-navy transition-colors">Pick Your Winner</h3>
            <p class="text-xl text-gray-700 leading-relaxed">
              Choose from the best options. <strong class="text-texas-gold">Your freedom, your choice, your savings.</strong>
            </p>
          </div>
        </div>

        <!-- Professional CTA Section -->
        <div class="bg-gradient-to-r from-texas-navy to-blue-800 rounded-3xl p-12 text-center text-white shadow-2xl">
          <div class="max-w-4xl mx-auto">
            <div class="flex items-center justify-center mb-6">
              <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mr-6">
                <svg class="w-8 h-8 text-texas-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="text-3xl font-bold">
                Ready to Find Plans in Your Area?
              </h3>
            </div>
            <p class="text-xl text-white/90 mb-10 max-w-3xl mx-auto leading-relaxed">
              Enter your ZIP code to see all available plans, real rates, and start comparing electricity providers in your specific area.
            </p>
            <div class="flex flex-col sm:flex-row gap-6 justify-center">
              <a 
                href="/texas/houston" 
                class="inline-flex items-center px-8 py-4 bg-texas-red text-white font-bold rounded-xl hover:bg-texas-red-600 transition-all duration-300 transform hover:scale-105 shadow-lg"
              >
                <svg class="mr-3 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                View Houston Plans
              </a>
              <a 
                href="/texas/dallas" 
                class="inline-flex items-center px-8 py-4 bg-white text-texas-navy font-bold rounded-xl hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg"
              >
                <svg class="mr-3 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                View Dallas Plans
              </a>
            </div>
            <p class="text-white/70 mt-6 text-lg">
              Or enter any Texas ZIP code above to find plans in your area
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Texas Electricity Education Section -->
    <div class="bg-white py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-5xl font-bold text-texas-navy mb-8 leading-tight">
            Why Texas Electricity Is Different
          </h2>
          <p class="text-2xl text-gray-700 max-w-4xl mx-auto leading-relaxed">
            Most states get stuck with one utility. <strong class="text-texas-gold">Texas gets choice.</strong> Here's what you need to know.
          </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-12 mb-20">
          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 text-center shadow-lg hover:shadow-2xl hover:border-texas-red transition-all duration-300 group">
            <div class="w-20 h-20 bg-gradient-to-br from-texas-red/10 to-texas-red/20 rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:from-texas-red/20 group-hover:to-texas-red/30 transition-all duration-300">
              <svg class="w-10 h-10 text-texas-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-3xl font-bold text-texas-navy mb-6 group-hover:text-texas-red transition-colors">What's a kWh?</h3>
            <p class="text-xl text-gray-700 leading-relaxed">
              Unlike gas where you pay a fixed price per gallon, electricity uses <strong class="text-texas-red">pricing formulas</strong> based on your monthly usage. You're buying a formula, not a fixed rate.
            </p>
          </div>

          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 text-center shadow-lg hover:shadow-2xl hover:border-texas-gold transition-all duration-300 group">
            <div class="w-20 h-20 bg-gradient-to-br from-texas-gold/10 to-texas-gold/20 rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:from-texas-gold/20 group-hover:to-texas-gold/30 transition-all duration-300">
              <svg class="w-10 h-10 text-texas-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <h3 class="text-3xl font-bold text-texas-navy mb-6 group-hover:text-texas-gold transition-colors">Why Rates Vary</h3>
            <p class="text-xl text-gray-700 leading-relaxed">
              <strong class="text-texas-gold">Competition.</strong> Companies fight for your business. Same electricity, different prices. We find the ones that don't overcharge.
            </p>
          </div>

          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 text-center shadow-lg hover:shadow-2xl hover:border-texas-navy transition-all duration-300 group">
            <div class="w-20 h-20 bg-gradient-to-br from-texas-navy/10 to-texas-navy/20 rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:from-texas-navy/20 group-hover:to-texas-navy/30 transition-all duration-300">
              <svg class="w-10 h-10 text-texas-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-3xl font-bold text-texas-navy mb-6 group-hover:text-texas-navy transition-colors">Fixed vs Variable</h3>
            <p class="text-xl text-gray-700 leading-relaxed">
              <strong class="text-texas-navy">Fixed</strong> = rate stays the same all year. <strong class="text-texas-red">Variable</strong> = changes with the market. Most Texans prefer fixed for predictable bills.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Smart Advice Section -->
    <div class="bg-gradient-to-b from-texas-cream/20 to-white py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-5xl font-bold text-texas-navy mb-8 leading-tight">
            Don't Make These Expensive Mistakes
          </h2>
          <p class="text-2xl text-gray-700 max-w-4xl mx-auto leading-relaxed">
            Two situations where most Texans accidentally overpay. Don't be one of them.
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 mb-20">
          <!-- Moving Advice -->
          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 shadow-lg hover:shadow-2xl hover:border-texas-gold transition-all duration-300">
            <div class="text-center mb-8">
              <div class="w-20 h-20 bg-texas-gold/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-texas-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="text-3xl font-bold text-texas-navy mb-4">Moving? Don't Transfer Your Plan</h3>
            </div>
            <div class="space-y-4 text-left text-xl text-gray-700 leading-relaxed">
              <p>Your current plan's pricing is based on your <strong class="text-texas-red">old home's usage patterns.</strong></p>
              <p>"Fixed rate" isn't really fixed – it's a formula that changes based on how much electricity you actually use.</p>
              <p>A plan perfect for a 1-bedroom apartment will cost way more in a 4-bedroom house.</p>
            </div>
            <div class="bg-texas-gold/10 border border-texas-gold/30 rounded-2xl p-6 mt-8">
              <p class="text-xl text-texas-navy font-semibold text-center">
                Find a plan that matches your <strong class="text-texas-navy">new home</strong> instead. Takes the same 10 minutes, saves you money.
              </p>
            </div>
          </div>

          <!-- Contract Expiration -->
          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 shadow-lg hover:shadow-2xl hover:border-texas-red transition-all duration-300">
            <div class="text-center mb-8">
              <div class="w-20 h-20 bg-texas-red/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-texas-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-3xl font-bold text-texas-navy mb-4">Contract Expiring? Don't Go on Holdover</h3>
            </div>
            <div class="space-y-4 text-left text-xl text-gray-700 leading-relaxed">
              <p><strong class="text-texas-red">Anything will be cheaper</strong> than the holdover rate you're paying now.</p>
              <p>You have <strong class="text-texas-navy">14 days before your contract expires</strong> to switch without penalty.</p>
              <p>Shop for a new plan every contract expiration – <strong class="text-texas-red">never just renew.</strong></p>
            </div>
            <div class="bg-texas-red/10 border border-texas-red/30 rounded-2xl p-6 mt-8">
              <p class="text-xl text-texas-navy font-semibold text-center">
                Best money-saving habit: <strong class="text-texas-navy">shop every contract expiration.</strong> Never let it expire.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Trust & Credibility Section -->
    <div class="bg-white py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-5xl font-bold text-texas-navy mb-8 leading-tight">
            Why Texans Trust ChooseMyPower
          </h2>
          <p class="text-2xl text-gray-700 max-w-4xl mx-auto leading-relaxed">
            <strong class="text-texas-red">{DEFAULT_COUNTS.planText}</strong> from licensed providers. No fly-by-night companies. No door-to-door scammers.
          </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-12 mb-20">
          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 text-center shadow-lg hover:shadow-2xl hover:border-texas-gold transition-all duration-300 group">
            <div class="w-20 h-20 bg-gradient-to-br from-texas-gold/10 to-texas-gold/20 rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:from-texas-gold/20 group-hover:to-texas-gold/30 transition-all duration-300">
              <svg class="w-10 h-10 text-texas-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-3xl font-bold text-texas-navy mb-6 group-hover:text-texas-gold transition-colors">Licensed & Regulated</h3>
            <p class="text-xl text-gray-700 leading-relaxed">
              Every provider is <strong class="text-texas-gold">licensed by the Public Utility Commission of Texas.</strong> No scammers, no fly-by-night operations.
            </p>
          </div>

          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 text-center shadow-lg hover:shadow-2xl hover:border-texas-navy transition-all duration-300 group">
            <div class="w-20 h-20 bg-gradient-to-br from-texas-navy/10 to-texas-navy/20 rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:from-texas-navy/20 group-hover:to-texas-navy/30 transition-all duration-300">
              <svg class="w-10 h-10 text-texas-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-3xl font-bold text-texas-navy mb-6 group-hover:text-texas-navy transition-colors">Real Customer Reviews</h3>
            <p class="text-xl text-gray-700 leading-relaxed">
              <strong class="text-texas-navy">Honest ratings from actual Texas customers,</strong> not fake testimonials or paid reviews.
            </p>
          </div>

          <div class="bg-white border-2 border-gray-200 rounded-3xl p-10 text-center shadow-lg hover:shadow-2xl hover:border-texas-red transition-all duration-300 group">
            <div class="w-20 h-20 bg-gradient-to-br from-texas-red/10 to-texas-red/20 rounded-2xl flex items-center justify-center mx-auto mb-8 group-hover:from-texas-red/20 group-hover:to-texas-red/30 transition-all duration-300">
