---
// Brownsville Municipal Utility Information Page - Brownsville Public Utilities Board
import Layout from '../../../layouts/Layout.astro';
import HeroBackground from '../../../components/HeroBackground.astro';
import { Badge } from '../../../components/ui/badge';
import { Button } from '../../../components/ui/button';
import { getHeroImage } from '../../../lib/images/hero-image-mapper';
import { municipalUtilities } from '../../../config/tdsp-mapping';
import { Zap, Shield, DollarSign, Clock, MapPin, ExternalLink, Info, Phone, Globe, Building, XCircle, CheckCircle } from 'lucide-react';

const citySlug = 'brownsville';
const utilityInfo = municipalUtilities[citySlug];

if (!utilityInfo) {
  return Astro.redirect('/404', 404);
}

const title = `${utilityInfo.cityDisplayName} Municipal Utility - ${utilityInfo.name}`;
const description = `Learn about ${utilityInfo.name}, the municipal electric utility serving ${utilityInfo.cityDisplayName}. This area has limited electricity choice.`;

// Get hero image for city
const heroImage = getHeroImage({ 
  pageType: 'city', 
  city: citySlug,
  filters: {} 
});
---

<Layout title={title} description={description}>
  <div class="bg-white">
    <!-- Municipal Utility Hero Section -->
    <section class="relative bg-gradient-to-br from-texas-gold-600 via-texas-gold-700 to-texas-red-800 overflow-hidden">
      {heroImage && <div class="absolute inset-0 opacity-20">
        <img src={heroImage} alt={`${utilityInfo.cityDisplayName} electricity`} class="w-full h-full object-cover" />
      </div>}
      <div class="absolute inset-0 bg-black opacity-20"></div>
      
      <!-- Content Container -->
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="py-16 sm:py-20 lg:py-24">
          <div class="text-center">
            <!-- Warning Badge -->
            <Badge variant="texas-accent" className="inline-flex items-center gap-2 mb-6 py-2 px-4 text-lg">
              <XCircle className="w-5 h-5" />
              Limited Electricity Choice
            </Badge>
            
            <!-- Main Heading -->
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-4 leading-tight">
              <span class="block">{utilityInfo.cityDisplayName}</span>
              <span class="block text-texas-gold-200">Municipal Utility</span>
            </h1>
            
            <!-- Utility Name -->
            <div class="flex items-center justify-center mb-6">
              <Building className="w-8 h-8 text-texas-gold-200 mr-3" />
              <h2 class="text-2xl sm:text-3xl font-semibold text-white">{utilityInfo.name}</h2>
            </div>
            
            <!-- Description -->
            <p class="text-lg sm:text-xl text-white/90 max-w-4xl mx-auto mb-8 leading-relaxed">
              {utilityInfo.description}
            </p>
            
            <!-- Call to Action -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <Button 
                asChild
                variant="outline" 
                size="lg"
                className="bg-white text-texas-gold-800 border-white hover:bg-gray-100 shadow-lg"
              >
                <a 
                  href={utilityInfo.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center text-texas-gold-800 hover:text-texas-gold-900"
                >
                  <Globe className="w-5 h-5 mr-2" />
                  Visit {utilityInfo.name}
                  <ExternalLink className="w-4 h-4 ml-2" />
                </a>
              </Button>
              <Button 
                asChild
                size="lg"
                className="bg-texas-navy hover:bg-blue-800 shadow-lg"
              >
                <a 
                  href="#deregulated-areas"
                  class="inline-flex items-center justify-center text-white hover:text-white"
                >
                  <CheckCircle className="w-5 h-5 mr-2" />
                  Find Full Choice Areas
                </a>
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Contact Information
          </h2>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Brownsville Public Utilities Board</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="space-y-6">
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Customer Service</h4>
                <div class="flex items-center">
                  <Phone className="w-4 h-4 text-gray-600 mr-2" />
                  <span class="text-gray-700">956-983-6100</span>
                </div>
              </div>
              
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Emergency Service</h4>
                <div class="flex items-center">
                  <Phone className="w-4 h-4 text-gray-600 mr-2" />
                  <span class="text-gray-700">956-983-6100</span>
                </div>
              </div>
            </div>
            
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">Online Services</h4>
              <a 
                href="https://www.bpub.com/"
                target="_blank"
                rel="noopener noreferrer" 
                class="inline-flex items-center text-texas-navy hover:text-texas-navy transition-colors"
              >
                <Globe className="w-4 h-4 mr-2" />
                bpub.com
                <ExternalLink className="w-3 h-3 ml-1" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Deregulated Areas Section -->
    <section id="deregulated-areas" class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Looking for Full Electricity Choice?
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Explore Texas areas with complete deregulated electricity markets
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <a href="/texas/dallas" class="bg-white rounded-lg shadow-sm border-2 border-green-200 p-6 hover:shadow-md transition-all group hover:border-green-300">
            <div class="flex items-center mb-4">
              <CheckCircle className="w-6 h-6 text-green-600 mr-2" />
              <h3 class="text-xl font-bold text-gray-900">Dallas Area</h3>
            </div>
            <p class="text-gray-600 mb-4">Multiple electricity providers with competitive rates and flexible plans</p>
            <span class="text-texas-navy font-semibold group-hover:text-texas-navy transition-colors">Compare Dallas Plans →</span>
          </a>

          <a href="/texas/houston" class="bg-white rounded-lg shadow-sm border-2 border-green-200 p-6 hover:shadow-md transition-all group hover:border-green-300">
            <div class="flex items-center mb-4">
              <CheckCircle className="w-6 h-6 text-green-600 mr-2" />
              <h3 class="text-xl font-bold text-gray-900">Houston Area</h3>
            </div>
            <p class="text-gray-600 mb-4">Extensive provider options with green energy and flexible contracts</p>
            <span class="text-texas-navy font-semibold group-hover:text-texas-navy transition-colors">Compare Houston Plans →</span>
          </a>

          <a href="/electricity-plans" class="bg-white rounded-lg shadow-sm border-2 border-green-200 p-6 hover:shadow-md transition-all group hover:border-green-300">
            <div class="flex items-center mb-4">
              <CheckCircle className="w-6 h-6 text-green-600 mr-2" />
              <h3 class="text-xl font-bold text-gray-900">All Deregulated Areas</h3>
            </div>
            <p class="text-gray-600 mb-4">Browse electricity choice across Texas's deregulated markets</p>
            <span class="text-texas-navy font-semibold group-hover:text-texas-navy transition-colors">Browse All Areas →</span>
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>