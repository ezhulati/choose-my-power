---
import Layout from '../../../layouts/Layout.astro';
import { Phone, Mail, MapPin, Clock, MessageSquare, HelpCircle } from 'lucide-react';

const title = "Contact ChooseMyPower | Get Help with Texas Electricity";
const description = "Contact our electricity experts for help choosing the best energy provider and plan in Texas. Multiple ways to reach our support team.";
---

<Layout title={title} description={description}>
  <div class="min-h-screen bg-gradient-to-b from-texas-cream to-gray-50">
    <!-- Hero Section -->
    <div class="bg-texas-navy text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Contact Our Experts</h1>
        <p class="text-xl text-white/90">Get personalized help choosing the best electricity plan for your needs in Texas.</p>
      </div>
    </div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Contact Methods Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        
        <!-- Phone Support -->
        <div class="bg-white p-8 rounded-xl shadow-lg text-center">
          <div class="w-16 h-16 bg-texas-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <Phone className="w-8 h-8 text-texas-red" />
          </div>
          <h2 class="text-xl font-bold text-texas-navy mb-4">Phone Support</h2>
          <p class="text-gray-700 mb-4">Speak with an electricity expert</p>
          <a href="tel:+18002667273" class="text-2xl font-bold text-texas-red hover:text-texas-red-600 transition-colors">
            1-800-COMPARE
          </a>
          <p class="text-sm text-gray-600 mt-2">Free consultation</p>
        </div>

        <!-- Email Support -->
        <div class="bg-white p-8 rounded-xl shadow-lg text-center">
          <div class="w-16 h-16 bg-texas-gold-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <Mail className="w-8 h-8 text-texas-gold-600" />
          </div>
          <h2 class="text-xl font-bold text-texas-navy mb-4">Email Support</h2>
          <p class="text-gray-700 mb-4">Get detailed responses via email</p>
          <a href="mailto:support@choosemypower.org" class="text-lg font-semibold text-texas-navy hover:text-texas-red transition-colors">
            support@choosemypower.org
          </a>
          <p class="text-sm text-gray-600 mt-2">24-48 hour response time</p>
        </div>

        <!-- Live Chat -->
        <div class="bg-white p-8 rounded-xl shadow-lg text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <MessageSquare className="w-8 h-8 text-texas-navy" />
          </div>
          <h2 class="text-xl font-bold text-texas-navy mb-4">Live Chat</h2>
          <p class="text-gray-700 mb-4">Instant help during business hours</p>
          <button class="bg-texas-navy text-white px-6 py-3 rounded-lg font-semibold hover:bg-texas-navy/90 transition-colors">
            Start Live Chat
          </button>
          <p class="text-sm text-gray-600 mt-2">Mon-Fri 9am-6pm CT</p>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h2 class="text-2xl font-bold text-texas-navy mb-6">Send Us a Message</h2>
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="first-name" class="block text-sm font-medium text-gray-700 mb-2">
                  First Name *
                </label>
                <input
                  type="text"
                  id="first-name"
                  name="first-name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-4 focus:ring-texas-red-200 focus:border-texas-red text-gray-900 placeholder-gray-500"
                  placeholder="Your first name"
                />
              </div>
              <div>
                <label for="last-name" class="block text-sm font-medium text-gray-700 mb-2">
                  Last Name *
                </label>
                <input
                  type="text"
                  id="last-name"
                  name="last-name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-4 focus:ring-texas-red-200 focus:border-texas-red text-gray-900 placeholder-gray-500"
                  placeholder="Your last name"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-4 focus:ring-texas-red-200 focus:border-texas-red text-gray-900 placeholder-gray-500"
                placeholder="your.email@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Phone Number
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-4 focus:ring-texas-red-200 focus:border-texas-red text-gray-900 placeholder-gray-500"
                placeholder="(555) 123-4567"
              />
            </div>

            <div>
              <label for="zip" class="block text-sm font-medium text-gray-700 mb-2">
                ZIP Code
              </label>
              <input
                type="text"
                id="zip"
                name="zip"
                pattern="[0-9]{5}"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-4 focus:ring-texas-red-200 focus:border-texas-red text-gray-900 placeholder-gray-500"
                placeholder="Enter zip code"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                Subject *
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-white focus:ring-4 focus:ring-texas-red-200 focus:border-texas-red text-gray-900"
              >
                <option value="">Select a topic</option>
                <option value="plan-recommendation">Plan Recommendation</option>
                <option value="switching-help">Help Switching Providers</option>
                <option value="billing-question">Billing Question</option>
                <option value="technical-support">Technical Support</option>
                <option value="partnership">Business Partnership</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-4 focus:ring-texas-red-200 focus:border-texas-red text-gray-900 placeholder-gray-500"
                placeholder="Tell us how we can help you..."
              ></textarea>
            </div>

            <div class="flex items-start">
              <input
                id="newsletter"
                name="newsletter"
                type="checkbox"
                class="mt-1 h-4 w-4 text-texas-red focus:ring-texas-red border-gray-300 rounded"
              />
              <label for="newsletter" class="ml-3 text-sm text-gray-700">
                I'd like to receive occasional email updates about Texas electricity market news and tips
              </label>
            </div>

            <button
              type="submit"
              class="w-full bg-texas-red text-white px-8 py-4 rounded-lg font-semibold hover:bg-texas-red-600 transition-colors focus:ring-4 focus:ring-texas-red-200 focus:outline-none"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Information & Hours -->
        <div class="space-y-8">
          <!-- Business Hours -->
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <div class="flex items-center mb-4">
              <Clock className="w-6 h-6 text-texas-navy mr-3" />
              <h3 class="text-xl font-bold text-texas-navy">Business Hours</h3>
            </div>
            <div class="space-y-2 text-gray-700">
              <div class="flex justify-between">
                <span>Monday - Friday:</span>
                <span class="font-semibold">9:00 AM - 6:00 PM CT</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday:</span>
                <span class="font-semibold">10:00 AM - 4:00 PM CT</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday:</span>
                <span class="font-semibold">Closed</span>
              </div>
              <div class="mt-4 p-3 bg-texas-cream-200 rounded-lg">
                <p class="text-sm text-texas-navy">
                  ðŸ“§ Email support available 24/7 with responses within 24-48 hours
                </p>
              </div>
            </div>
          </div>

          <!-- Service Area -->
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <div class="flex items-center mb-4">
              <MapPin className="w-6 h-6 text-texas-navy mr-3" />
              <h3 class="text-xl font-bold text-texas-navy">Service Area</h3>
            </div>
            <div class="text-gray-700">
              <p class="mb-3">We specialize in Texas deregulated electricity markets:</p>
              <ul class="space-y-1 text-sm">
                <li>â€¢ Dallas-Fort Worth Metroplex</li>
                <li>â€¢ Houston Metro Area</li>
                <li>â€¢ Austin Area (Municipal Utility Information)</li>
                <li>â€¢ San Antonio Area (Municipal Utility Information)</li>
                <li>â€¢ East Texas</li>
                <li>â€¢ West Texas</li>
                <li>â€¢ All ERCOT Service Territories</li>
              </ul>
            </div>
          </div>

          <!-- FAQ Quick Links -->
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <div class="flex items-center mb-4">
              <HelpCircle className="w-6 h-6 text-texas-navy mr-3" />
              <h3 class="text-xl font-bold text-texas-navy">Quick Help</h3>
            </div>
            <div class="space-y-3">
              <a href="/resources/faqs" class="block text-texas-red hover:text-texas-red-600 transition-colors font-medium">
                â†’ Frequently Asked Questions
              </a>
              <a href="/resources/guides/how-to-switch-providers" class="block text-texas-red hover:text-texas-red-600 transition-colors font-medium">
                â†’ How to Switch Providers
              </a>
              <a href="/resources/guides/choosing-a-provider" class="block text-texas-red hover:text-texas-red-600 transition-colors font-medium">
                â†’ Guide to Choosing a Provider
              </a>
              <a href="/rates/calculator" class="block text-texas-red hover:text-texas-red-600 transition-colors font-medium">
                â†’ Electricity Rate Calculator
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Emergency Contact Info -->
      <div class="mt-12 bg-texas-red/10 border-l-4 border-red-400 p-6 rounded-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-texas-red-800">
              Electricity Emergencies
            </h3>
            <div class="mt-2 text-sm text-texas-red-700">
              <p>For power outages or electrical emergencies, contact your local utility company directly:</p>
              <ul class="mt-2 list-disc list-inside">
                <li><strong>Oncor (Dallas, East TX):</strong> 888-313-6862</li>
                <li><strong>CenterPoint (Houston):</strong> 713-207-2222</li>
                <li><strong>AEP Texas (West TX):</strong> 877-373-4858</li>
                <li><strong>TNMP (North TX):</strong> 888-866-7456</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>