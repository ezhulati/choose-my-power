---
import Layout from '../layouts/Layout.astro';
import { RatesPage } from './_components/RatesPage';

const title = "What Am I Actually Going to Pay? | Real Texas Electricity Rates";
const description = "Forget the advertised rate. We show you what you'll actually pay each month with YOUR usage. Compare real costs from 100+ plans. No hidden fees or gotcha pricing.";
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/rate_calculator_16x9.png">
  <RatesPage client:load />
  
  <script>
    // Client-side navigation function for React components
    window.navigateToPath = function(path) {
      window.location.href = path;
    };
  </script>
</Layout>