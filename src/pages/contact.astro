---
/**
 * Contact Page - ChooseMyPower Contact Information & Forms
 * Professional contact page with multiple contact methods and forms
 * Texas flag design system with shadcn components
 */

import Layout from '../layouts/Layout.astro';
import HeroBackground from '../components/HeroBackground.astro';
import { Badge } from '../components/ui/badge';
import EnhancedSection from '../components/ui/EnhancedSection.astro';
import EnhancedCard from '../components/ui/EnhancedCard.astro';
import AccentBox from '../components/ui/AccentBox.astro';

const pageTitle = "Contact ChooseMyPower | Texas Electricity Experts";
const pageDescription = "Contact ChooseMyPower for support with Texas electricity plans, partnership opportunities, media inquiries, or general questions. Multiple ways to reach our team.";
const canonicalUrl = "/contact";

// Hero image for contact page
const heroImage = "/images/hero/texas-austin-skyline.jpg";

// Contact methods
const contactMethods = [
  {
    type: "Customer Support",
    icon: "support",
    title: "Need Help Choosing a Plan?",
    description: "Our Texas energy experts are here to help you find the right electricity plan for your home or business.",
    contact: "support@choosemypower.com",
    availability: "Monday - Friday, 8 AM - 7 PM CT",
    response: "Within 2 hours during business hours"
  },
  {
    type: "Partnership",
    icon: "partnership", 
    title: "Business Partnerships",
    description: "Interested in partnering with Texas's leading electricity comparison platform? Let's explore opportunities together.",
    contact: "partnerships@choosemypower.com",
    availability: "Monday - Friday, 9 AM - 5 PM CT",
    response: "Within 1 business day"
  },
  {
    type: "Media",
    icon: "media",
    title: "Press & Media Inquiries",
    description: "Media professionals seeking expert commentary on Texas electricity markets, deregulation, or consumer trends.",
    contact: "press@choosemypower.com", 
    availability: "Monday - Friday, 9 AM - 6 PM CT",
    response: "Same day for urgent requests"
  },
  {
    type: "Technical",
    icon: "technical",
    title: "Technical Issues",
    description: "Experiencing technical difficulties with our platform? Report bugs, accessibility issues, or website problems.",
    contact: "tech@choosemypower.com",
    availability: "24/7 monitoring",
    response: "Within 4 hours"
  }
];

// Office locations
const locations = [
  {
    name: "Austin Headquarters",
    address: "1234 South Lamar Blvd",
    city: "Austin, TX 78704",
    phone: "(512) 555-0123",
    description: "Our main office in the heart of Texas's capital city",
    hours: "Monday - Friday: 8 AM - 6 PM CT"
  },
  {
    name: "Houston Office", 
    address: "5678 Westheimer Rd",
    city: "Houston, TX 77056", 
    phone: "(713) 555-0456",
    description: "Serving the greater Houston metropolitan area",
    hours: "Monday - Friday: 8 AM - 6 PM CT"
  },
  {
    name: "Dallas Office",
    address: "9012 McKinney Ave",
    city: "Dallas, TX 75204",
    phone: "(214) 555-0789", 
    description: "Supporting North Texas electricity consumers",
    hours: "Monday - Friday: 8 AM - 6 PM CT"
  }
];

// FAQ items
const faqItems = [
  {
    question: "How quickly can I switch electricity providers?",
    answer: "In most cases, you can switch providers within 14 days. Some providers offer same-day or next-day switches, depending on your current contract terms and the new provider's processes."
  },
  {
    question: "Is there a fee to use ChooseMyPower's comparison service?",
    answer: "No, our comparison service is completely free for consumers. We maintain our independence and are not owned by any electricity provider."
  },
  {
    question: "What if I live in a non-deregulated area of Texas?",
    answer: "About 15% of Texas is served by municipal utilities or cooperatives that are not deregulated. If you're in these areas, you'll receive electricity from your local utility at regulated rates."
  },
  {
    question: "How do you ensure your rate comparisons are accurate?",
    answer: "We update our rate database every 15 minutes through direct API connections with electricity providers. Our platform also includes real-time TDSP boundary mapping to ensure plan availability accuracy."
  }
];
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  canonical={canonicalUrl}
>
  <!-- Schema.org structured data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "mainEntity": {
      "@type": "Organization",
      "name": "ChooseMyPower",
      "url": "https://choose-my-power.netlify.app",
      "contactPoint": [
        {
          "@type": "ContactPoint",
          "telephone": "+1-512-555-0123",
          "contactType": "customer service",
          "availableLanguage": ["English"],
          "serviceArea": {
            "@type": "State",
            "name": "Texas"
          }
        },
        {
          "@type": "ContactPoint", 
          "email": "support@choosemypower.com",
          "contactType": "customer service"
        },
        {
          "@type": "ContactPoint",
          "email": "partnerships@choosemypower.com", 
          "contactType": "business partnerships"
        },
        {
          "@type": "ContactPoint",
          "email": "press@choosemypower.com",
          "contactType": "media inquiries"
        }
      ]
    }
  }
  </script>

  <main class="min-h-screen">
    <!-- Hero Section -->
    <HeroBackground 
      imageUrl={heroImage}
      overlayOpacity={0.7}
    >
      <section class="text-white flex items-center justify-center min-h-[35vh] lg:min-h-[45vh]">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center">
          <Badge variant="texas-accent" className="mb-6 text-base px-4 py-2">
            We're Here to Help
          </Badge>
          
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-8 drop-shadow-lg">
            Contact Us
          </h1>
          
          <p class="text-xl lg:text-2xl text-white/90 mb-8 drop-shadow-md leading-relaxed max-w-4xl mx-auto">
            Get expert guidance on Texas electricity plans or reach out for partnerships, 
            media inquiries, and technical support.
          </p>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <div class="text-2xl font-bold text-texas-gold mb-1">2 Hours</div>
              <div class="text-sm text-white">Average Response Time</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <div class="text-2xl font-bold text-texas-gold mb-1">3 Offices</div>
              <div class="text-sm text-white">Across Texas</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <div class="text-2xl font-bold text-texas-gold mb-1">24/7</div>
              <div class="text-sm text-white">Technical Support</div>
            </div>
          </div>
        </div>
      </section>
    </HeroBackground>

    <!-- Contact Methods Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-texas-navy mb-4">
          How Can We Help You?
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          We're real people who actually understand Texas electricity. Pick whatever way works 
          best for you - we're here to help, not to sell you something.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        {contactMethods.map((method) => (
          <div key={method.type} class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow border border-gray-200">
            <div class="w-12 h-12 bg-texas-gold/10 rounded-lg flex items-center justify-center mb-4">
              {method.icon === 'support' && (
                <svg class="w-6 h-6 text-texas-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {method.icon === 'partnership' && (
                <svg class="w-6 h-6 text-texas-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              )}
              {method.icon === 'media' && (
                <svg class="w-6 h-6 text-texas-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15" />
                </svg>
              )}
              {method.icon === 'technical' && (
                <svg class="w-6 h-6 text-texas-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
            </div>
            
            <h3 class="text-lg font-bold text-texas-navy mb-2">{method.title}</h3>
            <p class="text-sm text-gray-600 mb-4">{method.description}</p>
            
            <div class="space-y-2">
              <div class="flex items-center gap-2 text-sm">
                <svg class="w-4 h-4 text-texas-gold flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href={`mailto:${method.contact}`} class="text-texas-navy hover:text-texas-red transition-colors font-medium">
                  {method.contact}
                </a>
              </div>
              
              <div class="flex items-center gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{method.availability}</span>
              </div>
              
              <div class="flex items-start gap-2">
                <Badge variant="texas-accent" className="text-xs">
                  {method.response}
                </Badge>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Contact Form Section -->
    <div class="bg-white py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-texas-navy mb-4">
            Send Us a Message
          </h2>
          <p class="text-lg text-gray-600">
            Fill out the form below and we'll get back to you within 2 hours during business hours.
          </p>
        </div>

        <form class="bg-gray-50 rounded-2xl p-8 shadow-lg">
          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="firstName" class="block text-sm font-medium text-texas-navy mb-2">
                First Name *
              </label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-texas-gold focus:border-transparent transition-colors"
                placeholder="Enter your first name"
              >
            </div>
            
            <div>
              <label for="lastName" class="block text-sm font-medium text-texas-navy mb-2">
                Last Name *
              </label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-texas-gold focus:border-transparent transition-colors"
                placeholder="Enter your last name"
              >
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="email" class="block text-sm font-medium text-texas-navy mb-2">
                Email Address *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-texas-gold focus:border-transparent transition-colors"
                placeholder="your.email@example.com"
              >
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-texas-navy mb-2">
                Phone Number
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-texas-gold focus:border-transparent transition-colors"
                placeholder="(555) 123-4567"
              >
            </div>
          </div>

          <div class="mb-6">
            <label for="subject" class="block text-sm font-medium text-texas-navy mb-2">
              Subject *
            </label>
            <select 
              id="subject" 
              name="subject" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-texas-gold focus:border-transparent transition-colors"
            >
              <option value="">Select a topic...</option>
              <option value="plan-help">Help Choosing an Electricity Plan</option>
              <option value="technical-issue">Technical Issue or Bug Report</option>
              <option value="partnership">Partnership Opportunity</option>
              <option value="media">Media Inquiry</option>
              <option value="feedback">Feedback or Suggestions</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="mb-6">
            <label for="city" class="block text-sm font-medium text-texas-navy mb-2">
              Texas City
            </label>
            <input 
              type="text" 
              id="city" 
              name="city"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-texas-gold focus:border-transparent transition-colors"
              placeholder="e.g., Houston, Dallas, Austin..."
            >
            <p class="text-xs text-gray-500 mt-1">
              Helps us provide more relevant assistance with your electricity options
            </p>
          </div>

          <div class="mb-8">
            <label for="message" class="block text-sm font-medium text-texas-navy mb-2">
              Message *
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-texas-gold focus:border-transparent transition-colors"
              placeholder="Please describe how we can help you..."
            ></textarea>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button 
              type="submit"
              class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-medium rounded-lg text-white bg-texas-navy hover:bg-texas-navy/90 transition-colors shadow-lg"
            >
              Send Message
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
              </svg>
            </button>
            
            <button 
              type="reset"
              class="inline-flex items-center justify-center px-8 py-4 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors"
            >
              Clear Form
            </button>
          </div>

          <p class="text-xs text-gray-500 text-center mt-4">
            By submitting this form, you agree to our 
            <a href="/privacy-policy" class="text-texas-navy hover:text-texas-red transition-colors">Privacy Policy</a>.
            We'll never share your information with third parties.
          </p>
        </form>
      </div>
    </div>

    <!-- Office Locations Section -->
    <div class="bg-texas-cream/30 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-texas-navy mb-4">
            Our Texas Offices
          </h2>
          <p class="text-lg text-gray-600">
            Visit us in person at one of our three Texas locations
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-12">
          {locations.map((location) => (
            <EnhancedCard variant="elevated" padding="lg" className="hover:shadow-xl transition-shadow">
              <h3 class="text-xl font-bold text-texas-navy mb-3">{location.name}</h3>
              
              <div class="space-y-3 mb-4">
                <div class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-texas-gold mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div class="text-sm">
                    <div class="font-medium text-texas-navy">{location.address}</div>
                    <div class="text-gray-600">{location.city}</div>
                  </div>
                </div>
                
                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-texas-gold flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <a href={`tel:${location.phone}`} class="text-sm font-medium text-texas-navy hover:text-texas-red transition-colors">
                    {location.phone}
                  </a>
                </div>
                
                <div class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-texas-gold mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <div class="text-sm text-gray-600">{location.hours}</div>
                </div>
              </div>
              
              <p class="text-sm text-gray-600 mb-4">{location.description}</p>
              
              <a 
                href={`https://maps.google.com?q=${encodeURIComponent(location.address + ', ' + location.city)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-sm font-medium text-texas-navy hover:text-texas-red transition-colors"
              >
                Get Directions
                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </EnhancedCard>
          ))}
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <div class="bg-white py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-texas-navy mb-4">
            Frequently Asked Questions
          </h2>
          <p class="text-lg text-gray-600">
            Quick answers to common questions about our services and Texas electricity
          </p>
        </div>

        <div class="space-y-6">
          {faqItems.map((faq, index) => (
            <div key={index} class="bg-gray-50 rounded-xl p-6 hover:shadow-md transition-shadow">
              <h3 class="text-lg font-semibold text-texas-navy mb-3">
                {faq.question}
              </h3>
              <p class="text-gray-700 leading-relaxed">
                {faq.answer}
              </p>
            </div>
          ))}
        </div>

        <div class="text-center mt-12">
          <p class="text-gray-600 mb-4">
            Don't see your question answered here?
          </p>
          <a 
            href="/resources/faqs" 
            class="inline-flex items-center text-texas-navy hover:text-texas-red transition-colors font-medium"
          >
            View All FAQs
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Emergency Contact Section -->
    <div class="bg-texas-red text-white py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-texas-gold mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
          <h2 class="text-2xl font-bold">Power Outage or Emergency?</h2>
        </div>
        
        <p class="text-lg mb-6 text-red-100">
          For power outages, downed lines, or electrical emergencies, contact your local utility or TDSP directly. 
          ChooseMyPower does not handle emergency services.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="https://www.oncor.com/en/pages/default.aspx" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-white text-texas-red font-medium rounded-lg hover:bg-gray-100 transition-colors"
          >
            Oncor (Dallas/Fort Worth)
