---
/**
 * User-Friendly Sitemap Page
 * Professional navigation for users and search engines
 * Links to all 5,800+ pages organized by category
 */

import Layout from '../layouts/Layout.astro';
import { generateCompleteSitemap } from '../lib/sitemap/sitemap-generator';

// Generate sitemap data
const sitemapData = generateCompleteSitemap();
const { sections, totalUrls, lastGenerated } = sitemapData;

// SEO metadata
const title = 'Sitemap | ChooseMyPower.org - Texas Electricity Plan Navigation';
const description = `Complete sitemap with ${totalUrls.toLocaleString()}+ pages covering Texas electricity plans, providers, cities, and resources. Find any page quickly with our organized navigation.`;
---

<Layout title={title} description={description}>
  <main class="sitemap-page">
    <!-- Hero Section -->
    <section class="sitemap-hero">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-texas-navy mb-6">
            Complete Site Navigation
          </h1>
          <p class="text-xl text-gray-600 mb-4 max-w-3xl mx-auto">
            Explore all {totalUrls.toLocaleString()} pages on ChooseMyPower.org. 
            Find electricity plans, providers, cities, and resources across Texas.
          </p>
          <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-500">
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Last Updated: {new Date(lastGenerated).toLocaleDateString()}
            </span>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Auto-Updated Daily
            </span>
            <a href="/sitemap.xml" class="flex items-center text-texas-navy hover:text-texas-red transition-colors">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              XML Sitemap for Search Engines
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Navigation -->
    <section class="quick-nav bg-gray-50 py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-center mb-6">Quick Navigation</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          {sections.map((section) => (
            <a href={`#${section.name.toLowerCase().replace(/[^a-z0-9]/g, '-')}`} 
               class="bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow text-center border">
              <div class="text-2xl font-bold text-texas-navy mb-1">
                {section.count.toLocaleString()}
              </div>
              <div class="text-sm text-gray-600">
                {section.name}
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Sitemap Sections -->
    <section class="sitemap-content py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-12">
          {sections.map((section) => (
            <div id={section.name.toLowerCase().replace(/[^a-z0-9]/g, '-')} class="sitemap-section">
              <!-- Section Header -->
              <div class="flex items-center justify-between mb-6 pb-4 border-b-2 border-texas-navy">
                <div>
                  <h2 class="text-3xl font-bold text-texas-navy">
                    {section.name}
                  </h2>
                  <p class="text-gray-600 mt-1">
                    {section.description}
                  </p>
                </div>
                <div class="text-right">
                  <div class="text-2xl font-bold text-texas-gold">
                    {section.count.toLocaleString()}
                  </div>
                  <div class="text-sm text-gray-500">pages</div>
                </div>
              </div>

              <!-- URLs Grid -->
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                {section.urls.slice(0, 50).map((url) => {
                  // Extract page name from URL
                  const urlPath = url.loc.replace('https://choosemypower.org', '');
                  const pageName = urlPath === '/' ? 'Homepage' : 
                    urlPath.split('/').filter(Boolean).pop()?.replace(/-/g, ' ')
                    ?.replace(/\b\w/g, l => l.toUpperCase()) || 'Page';
                  
                  return (
                    <a href={urlPath} 
                       class="flex items-center p-3 bg-white border rounded-lg hover:shadow-md hover:border-texas-navy transition-all group">
                      <div class="flex-shrink-0 w-8 h-8 bg-texas-navy/10 rounded-lg flex items-center justify-center mr-3 group-hover:bg-texas-navy/20">
                        <svg class="w-4 h-4 text-texas-navy" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
                        </svg>
                      </div>
                      <div class="flex-grow min-w-0">
                        <div class="text-sm font-medium text-gray-900 truncate group-hover:text-texas-navy">
                          {pageName}
                        </div>
                        <div class="text-xs text-gray-500 truncate">
                          {urlPath}
                        </div>
                      </div>
                      <div class="flex-shrink-0">
                        <svg class="w-4 h-4 text-gray-400 group-hover:text-texas-navy" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                      </div>
                    </a>
                  );
                })}
              </div>

              <!-- Show More Button for Large Sections -->
              {section.count > 50 && (
                <div class="mt-6 text-center">
                  <button class="inline-flex items-center px-6 py-3 border border-texas-navy text-texas-navy hover:bg-texas-navy hover:text-white transition-colors rounded-lg font-medium"
                          onclick={`toggleShowMore('${section.name.toLowerCase().replace(/[^a-z0-9]/g, '-')}')`}>
                    <span>Show More ({(section.count - 50).toLocaleString()} remaining)</span>
                    <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- SEO and Technical Info -->
    <section class="sitemap-footer bg-gray-50 py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-2">For Search Engines</h3>
            <a href="/sitemap.xml" 
               class="inline-flex items-center text-texas-navy hover:text-texas-red font-medium">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              XML Sitemap
            </a>
            <p class="text-sm text-gray-500 mt-1">
              Machine-readable format for Google Search Console
            </p>
          </div>
          
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-2">Auto-Updates</h3>
            <div class="flex items-center justify-center text-green-600">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Enabled
            </div>
            <p class="text-sm text-gray-500 mt-1">
              Updates automatically when pages are added/removed
            </p>
          </div>
          
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-2">Coverage</h3>
            <div class="text-2xl font-bold text-texas-navy">
              880+ Cities
            </div>
            <p class="text-sm text-gray-500 mt-1">
              Complete Texas electricity market coverage
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  // Show more functionality for large sections
  function toggleShowMore(sectionId) {
    const section = document.getElementById(sectionId);
    if (section) {
      // This would expand to show all URLs in the section
      // For now, just scroll to top of section
      section.scrollIntoView({ behavior: 'smooth' });
    }
  }

  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>

<style>
  .sitemap-hero {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  }
  
  .sitemap-section {
    scroll-margin-top: 2rem;
  }
  
  .quick-nav a:hover {
    transform: translateY(-2px);
  }
  
  .sitemap-content a:hover {
    transform: translateX(4px);
  }
  
  /* Responsive grid adjustments */
  @media (max-width: 768px) {
    .grid.grid-cols-3 {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    
    .grid.lg\\:grid-cols-3 {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
  }
</style>