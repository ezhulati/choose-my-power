---
import Layout from '../layouts/Layout.astro';
import { ComparePage } from './_components/ComparePage';

const title = "Compare Texas Electricity Without the Nonsense | Real Plans, Real Costs";
const description = "Tired of confusing electricity comparisons? We read the fine print, do the math, and show you what you'll actually pay. Compare 100+ plans from trusted providers in 10 minutes.";
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/plan_comparison_16x9.png">
  <ComparePage client:load />
  
  <script>
    // Client-side navigation function for React components
    window.navigateToPath = function(path) {
      window.location.href = path;
    };
  </script>
</Layout>