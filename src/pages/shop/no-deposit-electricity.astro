---
import Layout from '../../layouts/Layout.astro';
import HeroBackground from '../../components/HeroBackground.astro';
import { ZipCodeSearch } from '../../components/ZipCodeSearch';
import { DollarSign, CheckCircle, Users, Shield } from 'lucide-react';

const title = "No Deposit Electricity Plans in Texas | Start Service Today";
const description = "Get electricity service with no deposit required. Compare no-deposit plans from top Texas providers and start service immediately.";
---

<Layout title={title} description={description}>
  <div class="bg-white">
    <HeroBackground 
      title="No Deposit Electricity Plans" 
      subtitle="Start your electricity service today with $0 down"
      variant="no-deposit"
    >
      <div class="mt-8 max-w-md mx-auto">
        <ZipCodeSearch 
          client:load
          placeholder="Find no-deposit plans near you"
          className="w-full"
        />
      </div>
    </HeroBackground>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- Benefits Section -->
      <div class="mb-12 bg-texas-cream-200 border border-blue-200 rounded-xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Benefits of No Deposit Plans</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="flex items-start space-x-3">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <DollarSign class="h-5 w-5 text-green-600" />
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-2">Save Money Upfront</h3>
              <p class="text-gray-600 text-sm">Keep your cash for other expenses instead of paying deposits that can range from $50-$300.</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <div class="w-10 h-10 bg-texas-cream rounded-lg flex items-center justify-center flex-shrink-0">
              <CheckCircle class="h-5 w-5 text-texas-navy" />
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-2">Start Service Immediately</h3>
              <p class="text-gray-600 text-sm">Get your lights on faster without waiting for deposit approval or payment processing.</p>
            </div>
          </div>
          <div class="flex items-start space-x-3">
            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
              <Shield class="h-5 w-5 text-purple-600" />
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-2">No Credit Check</h3>
              <p class="text-gray-600 text-sm">Many no-deposit plans don't require credit checks, making them accessible to more customers.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- No Deposit Plans -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Best No Deposit Plans</h2>
        
        <div class="space-y-6">
          
          <!-- Plan 1 -->
          <div class="bg-white border-2 border-green-200 rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center space-x-3">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                  <CheckCircle class="h-6 w-6 text-green-600" />
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gray-900">Pollution Free e-Plus 12</h3>
                  <p class="text-gray-600">Green Mountain Energy</p>
                </div>
              </div>
              <div class="text-right">
                <div class="text-3xl font-bold text-green-600">8.9Â¢</div>
                <div class="text-gray-600">/kWh</div>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
              <div>
                <span class="text-sm text-gray-600">Deposit Required</span>
                <div class="text-2xl font-bold text-green-600">$0</div>
              </div>
              <div>
                <span class="text-sm text-gray-600">Contract Term</span>
                <div class="font-medium">12 months</div>
              </div>
              <div>
                <span class="text-sm text-gray-600">Credit Check</span>
                <div class="font-medium">Not Required</div>
              </div>
              <div>
                <span class="text-sm text-gray-600">Monthly Cost*</span>
                <div class="font-medium">$98.95</div>
              </div>
            </div>
            
            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-texas-gold-100 text-texas-navy text-sm rounded-full font-medium">$0 Deposit</span>
                <span class="px-3 py-1 bg-texas-navy/10 text-texas-navy text-sm rounded-full">100% Green</span>
                <span class="px-3 py-1 bg-texas-cream-100 text-texas-navy text-sm rounded-full">Fixed Rate</span>
              </div>
              <button class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
                Start Service
              </button>
            </div>
          </div>

          <!-- Continue with more no-deposit plans... -->
          
        </div>
      </div>

      <!-- Qualification Requirements -->
      <div class="bg-gray-50 rounded-xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">How to Qualify for No Deposit</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h4 class="font-semibold text-gray-900 mb-3">Typical Requirements</h4>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start space-x-2">
                <CheckCircle class="h-5 w-5 text-green-600 mt-0.5 flex-shrink-0" />
                <span>Good payment history with previous utility</span>
              </li>
              <li class="flex items-start space-x-2">
                <CheckCircle class="h-5 w-5 text-green-600 mt-0.5 flex-shrink-0" />
                <span>Satisfactory credit score (varies by provider)</span>
              </li>
              <li class="flex items-start space-x-2">
                <CheckCircle class="h-5 w-5 text-green-600 mt-0.5 flex-shrink-0" />
                <span>Valid identification and Social Security number</span>
              </li>
              <li class="flex items-start space-x-2">
                <CheckCircle class="h-5 w-5 text-green-600 mt-0.5 flex-shrink-0" />
                <span>Proof of income or employment</span>
              </li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-gray-900 mb-3">Alternative Options</h4>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start space-x-2">
                <Users class="h-5 w-5 text-texas-navy mt-0.5 flex-shrink-0" />
                <span>Letter of guarantee from qualified person</span>
              </li>
              <li class="flex items-start space-x-2">
                <Shield class="h-5 w-5 text-texas-navy mt-0.5 flex-shrink-0" />
                <span>Proof of satisfactory payment with other utilities</span>
              </li>
              <li class="flex items-start space-x-2">
                <DollarSign class="h-5 w-5 text-texas-navy mt-0.5 flex-shrink-0" />
                <span>Auto-pay enrollment may waive deposit</span>
              </li>
              <li class="flex items-start space-x-2">
                <CheckCircle class="h-5 w-5 text-texas-navy mt-0.5 flex-shrink-0" />
                <span>Some providers offer deposit waivers for seniors/veterans</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>