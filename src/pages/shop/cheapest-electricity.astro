---
import Layout from '../../layouts/Layout.astro';
import HeroBackground from '../../components/HeroBackground.astro';
import { ZipCodeSearch } from '../../components/ZipCodeSearch';
import { DollarSign, TrendingDown, Calculator, Award } from 'lucide-react';

const title = "Cheapest Electricity in Texas | Lowest Rates Available";
const description = "Find the cheapest electricity rates in Texas. Compare lowest-priced plans from top providers and save hundreds on your electricity bill.";
---

<Layout title={title} description={description}>
  <div class="min-h-screen bg-white">
    <HeroBackground 
      title="Cheapest Electricity in Texas" 
      subtitle="Find the lowest rates and save hundreds on your bill"
      heroType="shop"
    >
      <div class="mt-8 max-w-md mx-auto">
        <ZipCodeSearch 
          client:load
          placeholder="Enter ZIP to find cheapest rates"
          className="w-full"
        />
      </div>
    </HeroBackground>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- Savings Calculator -->
      <div class="mb-12 bg-green-50 border border-green-200 rounded-xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Calculate Your Savings</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Current Rate (¢/kWh)</label>
            <input type="number" step="0.1" value="12.5" class="w-full border border-gray-300 rounded-md px-3 py-2" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Monthly Usage (kWh)</label>
            <input type="number" value="1000" class="w-full border border-gray-300 rounded-md px-3 py-2" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Lowest Available Rate</label>
            <div class="text-3xl font-bold text-green-600">6.9¢</div>
          </div>
          <div class="text-center">
            <div class="text-sm text-gray-600 mb-1">Annual Savings</div>
            <div class="text-4xl font-bold text-green-600">$672</div>
          </div>
        </div>
      </div>

      <!-- Cheapest Plans -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Lowest Rates Available Now</h2>
        
        <div class="space-y-6">
          
          <!-- Plan 1 -->
          <div class="bg-white border-2 border-green-200 rounded-xl p-6 relative">
            <div class="absolute -top-3 left-6">
              <span class="bg-green-600 text-white px-4 py-1 rounded-full text-sm font-bold flex items-center space-x-1">
                <Award class="h-4 w-4" />
                <span>Lowest Rate</span>
              </span>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 items-center mt-2">
              <div class="lg:col-span-2">
                <h3 class="text-xl font-bold text-gray-900 mb-2">Maxx Saver Select 12</h3>
                <p class="text-gray-600 mb-3">4Change Energy</p>
                <div class="space-y-2">
                  <div class="flex items-center space-x-2">
                    <DollarSign class="h-4 w-4 text-green-600" />
                    <span class="text-sm text-gray-600">12-month fixed rate</span>
                  </div>
                  <div class="flex items-center space-x-2">
                    <TrendingDown class="h-4 w-4 text-green-600" />
                    <span class="text-sm text-gray-600">No deposit required</span>
                  </div>
                </div>
              </div>
              
              <div class="text-center">
                <div class="text-4xl font-bold text-green-600 mb-1">6.9¢</div>
                <div class="text-gray-600">/kWh</div>
                <div class="text-sm text-gray-500 mt-1">Base: $9.95/month</div>
              </div>
              
              <div class="text-center lg:text-right">
                <div class="text-3xl font-bold text-gray-900 mb-2">$78.95</div>
                <div class="text-sm text-gray-600 mb-4">per month (1000 kWh)</div>
                <button class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
                  Get This Rate
                </button>
              </div>
            </div>
          </div>

          <!-- Additional cheap plans... -->
          
        </div>
      </div>

      <!-- Money-Saving Tips -->
      <div class="bg-blue-50 rounded-xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Tips to Save Even More</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h4 class="font-semibold text-gray-900 mb-3">Rate Shopping Strategy</h4>
            <ul class="space-y-2 text-gray-600">
              <li>• Compare total monthly costs, not just per-kWh rates</li>
              <li>• Factor in base charges and fees</li>
              <li>• Consider your typical usage patterns</li>
              <li>• Read the fine print for rate changes</li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-gray-900 mb-3">Energy Efficiency</h4>
            <ul class="space-y-2 text-gray-600">
              <li>• Set thermostat to 78°F in summer</li>
              <li>• Use LED bulbs and ENERGY STAR appliances</li>
              <li>• Unplug devices when not in use</li>
              <li>• Schedule regular HVAC maintenance</li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>