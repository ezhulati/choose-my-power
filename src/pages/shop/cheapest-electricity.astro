---
import Layout from '../../layouts/Layout.astro';
import StandardZipInput from '../../components/StandardZipInput.astro';
import EnhancedSection from '../../components/ui/EnhancedSection.astro';
import EnhancedCard from '../../components/ui/EnhancedCard.astro';
import EnhancedList from '../../components/ui/EnhancedList.astro';
import AccentBox from '../../components/ui/AccentBox.astro';
import { DollarSign, TrendingDown, Calculator, Award, AlertTriangle, Eye, CheckCircle, Target } from 'lucide-react';

const title = "Compare Lowest Electricity Rates in Texas | Cheapest Plans";
const description = "Compare lowest electricity rates in Texas. Find affordable plans from licensed providers with transparent pricing including all fees.";
---

<Layout title={title} description={description}>
  <div class="bg-white">
    <!-- Elegant Hero Section -->
    <section class="bg-gradient-to-br from-texas-navy via-blue-800 to-texas-navy">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg mb-6">
          <TrendingDown className="h-8 w-8 text-white" />
        </div>
        
        <div class="space-y-4">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold text-white leading-tight max-w-4xl mx-auto">
            Cheapest Texas Electricity Plans - Real Rates
          </h1>
          
          <p class="text-base md:text-lg text-blue-100/80 font-normal max-w-3xl mx-auto leading-relaxed">
            Find genuinely cheap electricity plans from licensed Texas providers. 
            <span class="text-white font-medium">All rates include delivery charges and fees</span> - no surprises.
          </p>
          
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 max-w-2xl mx-auto border border-white/20">
            <p class="text-sm text-white/90 font-normal">
              <span class="text-texas-gold font-medium">Total cost comparison</span> with all fees included upfront.
            </p>
          </div>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap items-center justify-center gap-6 text-center text-white/70 text-sm max-w-md mx-auto mt-8">
          <span>Real total costs</span>
          <span>All fees included</span>
          <span>No teaser tricks</span>
        </div>
        
        <!-- ZIP Search -->
        <div class="max-w-md mx-auto mt-8">
          <StandardZipInput 
            variant="inline" 
            size="lg" 
            showTitle={false} 
            showDescription={false} 
            showStats={false} 
            customClass="max-w-lg mx-auto" 
          />
          <p class="text-blue-200 text-sm mt-2">Compare cheapest rates in your area</p>
        </div>
      </div>
    </section>

    <!-- Enhanced Rate Comparison Section -->
    <EnhancedSection background="gray" padding="xl">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-texas-navy mb-6">
            How to Compare Electricity Rates Correctly
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Compare total monthly cost including delivery charges, connection fees, and all service charges.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <EnhancedCard variant="outlined" padding="lg" className="border-red-200 bg-red-50">
            <h3 class="text-2xl font-bold text-red-800 mb-6 flex items-center gap-3">
              <AlertTriangle className="h-6 w-6" />
              Advertised Rate Only
            </h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-gray-700 font-medium">Advertised Rate</span>
                <span class="text-3xl font-bold text-red-600">8.9¢</span>
              </div>
              <div class="text-base text-gray-600 border-t border-red-200 pt-4">
                <p class="font-medium mb-2">"Looks cheap! I'll save money!"</p>
                <p class="italic text-red-700 font-semibold">*Actual bill: $180/month</p>
              </div>
            </div>
          </EnhancedCard>

          <EnhancedCard variant="outlined" padding="lg" className="border-green-200 bg-green-50">
            <h3 class="text-2xl font-bold text-green-800 mb-6 flex items-center gap-3">
              <CheckCircle className="h-6 w-6" />
              Total Cost Comparison
            </h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-gray-700 font-medium">Base Rate</span>
                <span class="text-lg font-semibold">8.9¢</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-700 font-medium">Base Charge</span>
                <span class="text-lg font-semibold">$9.95</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-700 font-medium">TDU Delivery</span>
                <span class="text-lg font-semibold">$42.18</span>
              </div>
              <div class="flex justify-between items-center border-t border-green-200 pt-4">
                <span class="text-gray-900 font-bold">Real Monthly Cost</span>
                <span class="text-3xl font-bold text-green-600">$121.13</span>
              </div>
            </div>
          </EnhancedCard>
        </div>
      </div>
    </EnhancedSection>

    <!-- Enhanced Savings Calculator -->
    <EnhancedSection background="cream" padding="lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <AccentBox accentColor="gold" padding="lg">
          <h2 class="text-2xl md:text-3xl font-bold text-texas-navy mb-6 text-center">
            Calculate Your Real Savings
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <div>
              <label class="block text-base font-semibold text-gray-700 mb-3">What You Pay Now (total bill)</label>
              <input type="number" step="1" value="180" class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 text-lg font-semibold focus:ring-2 focus:ring-texas-gold focus:border-texas-gold" />
            </div>
            <div>
              <label class="block text-base font-semibold text-gray-700 mb-3">Monthly Usage (kWh)</label>
              <input type="number" value="1000" class="w-full border-2 border-gray-300 rounded-lg px-4 py-3 text-lg font-semibold focus:ring-2 focus:ring-texas-gold focus:border-texas-gold" />
            </div>
            <div>
              <label class="block text-base font-semibold text-gray-700 mb-3">Real Cheapest Rate (total cost)</label>
              <div class="text-4xl font-bold text-texas-red">$89</div>
            </div>
            <div class="text-center">
              <div class="text-base text-gray-700 mb-2 font-semibold">You're Being Overcharged</div>
              <div class="text-5xl font-bold text-texas-red mb-1">$1,092</div>
              <div class="text-base text-gray-600 font-medium">per year</div>
            </div>
          </div>
        </AccentBox>
      </div>
    </EnhancedSection>

    <!-- Enhanced Cheapest Plans Section -->
    <EnhancedSection background="white" padding="xl">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-texas-navy mb-6">
            Cheapest Texas Plans (All Fees Included)
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            These are the genuinely cheapest plans when you add up everything you'll pay. 
            <span class="text-texas-navy font-bold">No teaser rates, just honest total costs.</span>
          </p>
        </div>
        
        <div class="space-y-8">
          
          <!-- Enhanced Plan 1 - Real Cheapest -->
          <EnhancedCard variant="elevated" padding="lg" className="relative border-2 border-texas-gold-200">
            <div class="absolute -top-3 left-6 z-10">
              <AccentBox accentColor="gold" padding="sm" className="inline-flex items-center space-x-1">
                <Award class="h-4 w-4" />
                <span class="font-bold">Actual Cheapest</span>
              </AccentBox>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 items-center mt-2">
              <div class="lg:col-span-2">
                <h3 class="text-xl font-bold text-texas-navy mb-2">TXU Energy Simply Lock 12</h3>
                <p class="text-gray-600 mb-3">TXU Energy - Texas's Largest Provider</p>
                <div class="space-y-2">
                  <div class="flex items-center space-x-2">
                    <CheckCircle class="h-4 w-4 text-green-600" />
                    <span class="text-sm text-gray-600">Real advertised rate - no tricks</span>
                  </div>
                  <div class="flex items-center space-x-2">
                    <Eye class="h-4 w-4 text-green-600" />
                    <span class="text-sm text-gray-600">Price includes ALL fees and delivery</span>
                  </div>
                  <div class="flex items-center space-x-2">
                    <Target class="h-4 w-4 text-green-600" />
                    <span class="text-sm text-gray-600">Rate fixed for 12 months</span>
                  </div>
                </div>
              </div>
              
              <div class="text-center">
                <div class="text-sm text-gray-500 mb-1">True Monthly Cost</div>
                <div class="text-4xl font-bold text-texas-red mb-1">$89</div>
                <div class="text-gray-600">for 1000 kWh</div>
                <div class="text-sm text-green-600 mt-2 font-medium">8.9¢ effective rate</div>
              </div>
              
              <div class="text-center lg:text-right">
                <div class="mb-4">
                  <div class="text-2xl font-bold text-texas-navy">Save $91</div>
                  <div class="text-sm text-gray-600">per month vs average</div>
                  <div class="text-sm font-medium text-green-600">$1,092/year savings</div>
                </div>
                <button class="bg-texas-red text-white px-6 py-3 min-h-[48px] rounded-lg hover:bg-red-700 transition-colors mb-2 touch-manipulation w-full">
                  Get This Rate Now
                </button>
                <div class="text-xs text-gray-500">No deposit • No surprises</div>
              </div>
            </div>
          </EnhancedCard>

          <!-- Enhanced Plan 2 - Second Cheapest -->
          <EnhancedCard variant="default" padding="lg">
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 items-center">
              <div class="lg:col-span-2">
                <h3 class="text-xl font-bold text-texas-navy mb-2">Reliant Secure Advantage 12</h3>
                <p class="text-gray-600 mb-3">Reliant Energy - Trusted Brand</p>
                <div class="space-y-2">
                  <div class="flex items-center space-x-2">
                    <CheckCircle class="h-4 w-4 text-green-600" />
                    <span class="text-sm text-gray-600">No cancellation fees</span>
                  </div>
                  <div class="flex items-center space-x-2">
                    <Eye class="h-4 w-4 text-green-600" />
                    <span class="text-sm text-gray-600">All-inclusive pricing</span>
                  </div>
                </div>
              </div>
              
              <div class="text-center">
                <div class="text-sm text-gray-500 mb-1">True Monthly Cost</div>
                <div class="text-4xl font-bold text-texas-red mb-1">$94</div>
                <div class="text-gray-600">for 1000 kWh</div>
                <div class="text-sm text-green-600 mt-2 font-medium">9.4¢ effective rate</div>
              </div>
              
              <div class="text-center lg:text-right">
                <div class="mb-4">
                  <div class="text-2xl font-bold text-texas-navy">Save $86</div>
                  <div class="text-sm text-gray-600">per month vs average</div>
                </div>
                <button class="bg-texas-navy text-white px-6 py-3 min-h-[48px] rounded-lg hover:bg-texas-navy/90 transition-colors mb-2 touch-manipulation w-full">
                  Get This Rate
                </button>
                <div class="text-xs text-gray-500">Online account management</div>
              </div>
            </div>
          </EnhancedCard>

          <!-- Enhanced Plan 3 - Green Option -->
          <EnhancedCard variant="default" padding="lg">
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 items-center">
              <div class="lg:col-span-2">
                <h3 class="text-xl font-bold text-texas-navy mb-2">Green Mountain Pollution Free e-Plus</h3>
                <p class="text-gray-600 mb-3">Green Mountain Energy - 100% Renewable</p>
                <div class="space-y-2">
                  <div class="flex items-center space-x-2">
                    <CheckCircle class="h-4 w-4 text-green-600" />
                    <span class="text-sm text-gray-600">100% renewable energy</span>
                  </div>
                  <div class="flex items-center space-x-2">
                    <Award class="h-4 w-4 text-green-600" />
                    <span class="text-sm text-gray-600">Cheapest green option</span>
                  </div>
                </div>
              </div>
              
              <div class="text-center">
                <div class="text-sm text-gray-500 mb-1">True Monthly Cost</div>
                <div class="text-4xl font-bold text-texas-red mb-1">$98</div>
                <div class="text-gray-600">for 1000 kWh</div>
                <div class="text-sm text-green-600 mt-2 font-medium">9.8¢ effective rate</div>
              </div>
              
              <div class="text-center lg:text-right">
                <div class="mb-4">
                  <div class="text-2xl font-bold text-texas-navy">Save $82</div>
                  <div class="text-sm text-gray-600">per month vs average</div>
                  <div class="text-xs text-green-600 font-medium">Go green & save money</div>
                </div>
                <button class="bg-green-600 text-white px-6 py-3 min-h-[48px] rounded-lg hover:bg-green-700 transition-colors mb-2 touch-manipulation w-full">
                  Choose Green & Cheap
                </button>
                <div class="text-xs text-gray-500">Carbon-free electricity</div>
              </div>
            </div>
          </EnhancedCard>
          
        </div>
      </div>
    </EnhancedSection>

    <!-- Enhanced How to Avoid Getting Scammed Section -->
    <EnhancedSection background="gradient-navy" padding="xl">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <EnhancedCard variant="gradient" padding="xl" className="bg-gradient-to-r from-texas-navy to-blue-800 text-white border-none">
          <h3 class="text-3xl font-bold mb-8 text-center">How to Never Get Fooled Again</h3>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div>
              <h4 class="font-semibold text-texas-gold mb-6 flex items-center gap-3 text-lg">
                <AlertTriangle className="h-6 w-6" />
                Red Flags to Watch Out For
              </h4>
              <EnhancedList 
                bulletColor="red" 
                textSize="base"
                spacing="lg"
                textColor="text-blue-100"
                items={[
                  '"Intro rates" that change after 3-6 months',
                  'Rates advertised without mentioning base fees',
                  'Door-to-door salespeople with "limited time offers"',
                  'Plans that require you to use exact amounts of electricity',
                  'Companies that won\'t show you the total monthly cost upfront'
                ]}
              />
            </div>
            <div>
              <h4 class="font-semibold text-texas-gold mb-6 flex items-center gap-3 text-lg">
                <CheckCircle className="h-6 w-6" />
                Smart Shopping Rules
              </h4>
              <EnhancedList 
                bulletColor="gold" 
                textSize="base"
                spacing="lg"
                textColor="text-blue-100"
                items={[
                  'Always ask for the total monthly cost for your usage',
                  'Read the Electricity Facts Label (EFL) carefully',
                  'Ignore per-kWh rates, focus on total bill amount',
                  'Choose fixed rates over variable for predictable bills',
                  'Stick with well-known providers for reliability'
                ]}
              />
            </div>
          </div>
          
          <!-- Enhanced Call to Action -->
          <div class="mt-12 text-center">
            <h4 class="text-blue-200 text-xl mb-6">
              Ready to stop overpaying for electricity?
            </h4>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <button class="bg-texas-red text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-red-700 transition-all duration-300 shadow-lg hover:shadow-xl">
                Find My Real Cheapest Rate
              </button>
              <button class="bg-white text-texas-navy px-8 py-4 rounded-xl font-bold text-lg hover:bg-gray-100 transition-all duration-300 border border-white">
                Compare All Options
              </button>
            </div>
            <p class="text-blue-300 text-base mt-4 font-medium">
              Join thousands of Texans who've escaped the PowerToChoose trap
            </p>
          </div>
        </EnhancedCard>
      </div>
    </EnhancedSection>
  </div>
</Layout>