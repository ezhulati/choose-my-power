---
import Layout from '../layouts/Layout.astro';
import { ProvidersPage } from './_components/ProvidersPage';

const title = "Texas Electricity Providers Directory | Compare Energy Companies";
const description = "Complete directory of Texas electricity providers. Compare TXU Energy, Reliant, Direct Energy, and 50+ other licensed retail electric providers.";
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/business_district_clean_16x9.png">
  <ProvidersPage client:load />
  
  <script>
    // Client-side navigation function for React components
    window.navigateToPath = function(path) {
      window.location.href = path;
    };
  </script>
</Layout>