---
import Layout from '../layouts/Layout.astro';
import { ProvidersPage } from './_components/ProvidersPage';

const title = "All Texas Electric Companies Ranked | Who's Good, Who's Not";
const description = "Every electricity company in Texas ranked by real customers. TXU, Reliant, and 50+ others. See who people actually trust with their power (and who to avoid).";
---

<Layout title={title} description={description} ogImage="/images/og/comprehensive-clean/business_district_clean_16x9.png">
  <ProvidersPage client:load />
  
  <script>
    // Client-side navigation function for React components
    window.navigateToPath = function(path) {
      window.location.href = path;
    };
  </script>
</Layout>