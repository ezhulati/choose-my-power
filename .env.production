# Production Environment Configuration for ChooseMyPower.org
# This file contains production environment variable templates
# Copy to .env and configure with actual production values

# Node.js Environment
NODE_ENV=production
ASTRO_TELEMETRY_DISABLED=1

# Netlify Configuration (Required for deployment)
NETLIFY_SITE_ID=your-netlify-site-id
NETLIFY_AUTH_TOKEN=your-netlify-auth-token

# ComparePower API Configuration (Required for data)
COMPAREPOWER_API_KEY=your-comparepower-api-key
COMPAREPOWER_API_URL=https://pricing.api.comparepower.com

# Database Configuration (Optional - falls back to mock data if not provided)
DATABASE_URL=postgresql://username:password@host:port/database
# Alternative format for Neon/PlanetScale
# DATABASE_URL=postgresql://user:pass@ep-example.us-east-1.aws.neon.tech/neondb?sslmode=require

# Redis Cache Configuration (Optional - uses memory cache if not provided)
REDIS_URL=redis://username:password@host:port
# Alternative formats:
# REDIS_URL=redis://localhost:6379
# REDIS_URL=rediss://red-example.redis.cloud:12345

# Build Configuration
MAX_CITIES=881
BATCH_SIZE=10
BATCH_DELAY_MS=2000
USE_CACHED_DATA=true
FORCE_REBUILD=false

# Monitoring & Alerting (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERTS_EMAIL=alerts@choosemypower.org

# Analytics & Tracking (Optional)
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Security Configuration
ALLOWED_ORIGINS=https://choosemypower.org,https://www.choosemypower.org

# Feature Flags
ENABLE_FACETED_NAVIGATION=true
ENABLE_CACHE_WARMING=true
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
API_RATE_LIMIT_PER_SECOND=25
API_BURST_LIMIT=50
API_CONCURRENT_REQUESTS=10

# Image Generation (Optional)
FAL_API_KEY=your-fal-api-key
IDEOGRAM_API_KEY=your-ideogram-api-key